<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <include
        android:id="@+id/top_layout"
        layout="@layout/top_title_layout" />

    <LinearLayout
        android:id="@+id/progress_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_layout"
        android:background="#fafafa"
        android:orientation="vertical"
        android:paddingBottom="@dimen/px2dp_25"
        android:paddingTop="@dimen/px2dp_34" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px2dp_56"
            android:layout_marginRight="@dimen/px2dp_56"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/one_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_process"
                android:gravity="center"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="@dimen/px2sp_26" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#2da8df" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_process"
                android:gravity="center"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="@dimen/px2sp_26" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#2da8df" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_process"
                android:gravity="center"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="@dimen/px2sp_26" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#2da8df" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_process"
                android:gravity="center"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="@dimen/px2sp_26" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#2da8df" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_process"
                android:gravity="center"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="@dimen/px2sp_26" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px2dp_27"
            android:text="了解您的风险偏好以便作出专业的投资规划"
            android:textColor="#666666"
            android:textSize="@dimen/px2sp_32" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_layout"
        android:layout_marginTop="@dimen/px2dp_82"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px2dp_56"
            android:layout_marginRight="@dimen/px2dp_56"
            android:layout_marginTop="@dimen/px2dp_24"
            android:gravity="center_vertical"
            android:lineSpacingExtra="@dimen/px2dp_24"
            android:text="如果您的整个投资组合在一个月内损失了10%，您会怎么做？"
            android:textColor="#333333"
            android:textSize="@dimen/px2sp_32" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px2dp_56"
            android:layout_marginTop="@dimen/px2dp_8"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/radio_btn0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableLeft="@drawable/radio_sel_img"
                android:drawablePadding="@dimen/px2dp_22"
                android:paddingLeft="0dp"
                android:paddingTop="@dimen/px2dp_20"
                android:paddingBottom="@dimen/px2dp_20"
                android:text="卖出所有投资产品"
                android:textColor="@color/radio_text_color"
                android:textSize="@dimen/px2sp_32" />

            <RadioButton
                android:id="@+id/radio_btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/px2dp_20"
                android:paddingBottom="@dimen/px2dp_20"
                android:button="@null"
                android:drawableLeft="@drawable/radio_sel_img"
                android:drawablePadding="@dimen/px2dp_22"
                android:paddingLeft="0dp"
                android:text="卖出部分投资产品"
                android:textColor="@color/radio_text_color"
                android:textSize="@dimen/px2sp_32" />

            <RadioButton
                android:id="@+id/radio_btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/px2dp_20"
                android:paddingBottom="@dimen/px2dp_20"
                android:button="@null"
                android:drawableLeft="@drawable/radio_sel_img"
                android:drawablePadding="@dimen/px2dp_22"
                android:paddingLeft="0dp"
                android:text="保持不变继续观望"
                android:textColor="@color/radio_text_color"
                android:textSize="@dimen/px2sp_32" />

            <RadioButton
                android:id="@+id/radio_btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/px2dp_20"
                android:paddingBottom="@dimen/px2dp_20"
                android:button="@null"
                android:drawableLeft="@drawable/radio_sel_img"
                android:drawablePadding="@dimen/px2dp_22"
                android:paddingLeft="0dp"
                android:text="继续买入现有产品"
                android:textColor="@color/radio_text_color"
                android:textSize="@dimen/px2sp_32" />
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/next_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/px2dp_30"
        android:layout_marginLeft="@dimen/px2dp_30"
        android:layout_marginRight="@dimen/px2dp_30"
        android:background="@drawable/blue_round_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/px2dp_26"
        android:paddingTop="@dimen/px2dp_26"
        android:text="完成"
        android:textColor="#ffffff"
        android:textSize="@dimen/px2sp_34" />

</RelativeLayout>