<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <include
        android:id="@+id/top_layout"
        layout="@layout/top_title_layout" />

    <TextView
        android:id="@+id/info_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_layout"
        android:layout_marginBottom="@dimen/px2dp_24"
        android:layout_marginLeft="@dimen/px2dp_46"
        android:layout_marginRight="@dimen/px2dp_46"
        android:layout_marginTop="@dimen/px2dp_36"
        android:lineSpacingExtra="@dimen/px2dp_12"
        android:text="为了给您提供更好的服务，请完成实名认证。未经允许您的个人信息将不会以任何方式对外展示，也不会泄露给第三方。"
        android:textColor="#333333"
        android:textSize="@dimen/px2sp_26" />

    <View
        android:id="@+id/line_view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_20"
        android:layout_below="@id/info_txt"
        android:background="#f2f2f2" />

    <LinearLayout
        android:id="@+id/real_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_view1"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px2dp_30" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px2dp_20"
            android:paddingBottom="@dimen/px2dp_38"
            android:paddingTop="@dimen/px2dp_38"
            android:text="真实姓名"
            android:textColor="#333333"
            android:textSize="@dimen/px2dp_32" />

        <EditText
            android:id="@+id/name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入您的真实姓名"
            android:paddingBottom="@dimen/px2dp_38"
            android:paddingTop="@dimen/px2dp_38"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="@dimen/px2dp_32" />
    </LinearLayout>

    <View
        android:id="@+id/line_view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/real_name_layout"
        android:layout_marginLeft="@dimen/px2dp_30"
        android:background="#e9e9e9" />

    <LinearLayout
        android:id="@+id/id_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_view2"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px2dp_30" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px2dp_20"
            android:paddingBottom="@dimen/px2dp_38"
            android:paddingTop="@dimen/px2dp_38"
            android:text="身份证号"
            android:textColor="#333333"
            android:textSize="@dimen/px2dp_32" />

        <EditText
            android:id="@+id/id_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请正确输入您的身份证信息"
            android:paddingBottom="@dimen/px2dp_38"
            android:paddingTop="@dimen/px2dp_38"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="@dimen/px2dp_32" />
    </LinearLayout>

    <View
        android:id="@+id/line_view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/id_layout"
        android:layout_marginLeft="@dimen/px2dp_30"
        android:background="#e9e9e9" />

    <TextView
        android:id="@+id/btn_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/px2dp_30"
        android:background="@drawable/blue_round_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/px2dp_26"
        android:paddingTop="@dimen/px2dp_26"
        android:text="确认认证"
        android:textColor="#ffffff"
        android:textSize="@dimen/px2sp_34" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_txt"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/px2dp_20"
        android:layout_marginRight="@dimen/px2dp_20"
        android:textColor="#f34d4d"
        android:text="此信息一经确认，无法修改，请务必保证信息填写无误！"
        android:textSize="@dimen/px2dp_26" />

</RelativeLayout>