<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/opation_bg1"
    android:paddingTop="@dimen/px2dp_78" 
    android:paddingBottom="@dimen/px2dp_74">

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/default_value"
        android:textColor="#333333"
        android:textSize="@dimen/px2sp_36" 
        android:layout_marginLeft="@dimen/px2dp_78"
        android:layout_marginRight="@dimen/px2dp_78"/>

    <TextView
        android:id="@+id/content_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_txt"
        android:layout_marginLeft="@dimen/px2dp_78"
        android:layout_marginRight="@dimen/px2dp_78"
        android:layout_marginTop="@dimen/px2dp_27"
        android:lineSpacingExtra="@dimen/px2dp_10"
        android:text="@string/default_value"
        android:textColor="#999999"
        android:textSize="@dimen/px2sp_30" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_txt"
        android:layout_marginTop="@dimen/px2dp_48"
        android:paddingLeft="@dimen/px2dp_38"
        android:paddingRight="@dimen/px2dp_38" >

        <TextView
            android:id="@+id/submit_txt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_70"
            android:background="#2061a1"
            android:gravity="center"
            android:text="@string/default_value"
            android:textColor="#ffffff"
            android:textSize="@dimen/px2sp_30" />

        <TextView
            android:id="@+id/cancel_txt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_70"
            android:layout_below="@id/submit_txt"
            android:layout_marginTop="@dimen/px2dp_20"
            android:background="#6da4db"
            android:gravity="center"
            android:text="@string/default_value"
            android:textColor="#ffffff"
            android:textSize="@dimen/px2sp_30" />
    </RelativeLayout>

</RelativeLayout>