<com.miduo.financialmanageclient.widget.MyRelaLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <include
        android:id="@+id/ll"
        layout="@layout/top_title_layout" />

    <LinearLayout
        android:id="@+id/ll_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/px2dp_10"
        android:background="#FFFFFF" >

        <TextView
            android:id="@+id/btn_txt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_90"
            android:layout_marginBottom="@dimen/px2dp_30"
            android:layout_marginLeft="@dimen/px2dp_30"
            android:layout_marginRight="@dimen/px2dp_30"
            android:background="@drawable/blue_round_bg"
            android:gravity="center"
            android:text="确认转账"
            android:textColor="#ffffff"
            android:textSize="@dimen/px2sp_34" />
    </LinearLayout>

    <com.miduo.financialmanageclient.widget.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_01"
        android:layout_below="@id/ll"
        android:layout_marginBottom="@dimen/px2dp_20"
        android:background="#FFFFFF" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px2dp_30"
                android:layout_marginLeft="@dimen/px2dp_30"
                android:layout_marginTop="@dimen/px2dp_50"
                android:text="@string/default_value"
                android:textColor="#333333"
                android:textSize="@dimen/px2dp_32" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px2dp_29"
                android:layout_marginRight="@dimen/px2dp_30"
                android:background="#f5f5f5"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px2dp_30"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/TextStyle"
                        android:text="预期年化收益率" />

                    <TextView
                        android:layout_width="@dimen/px2dp_400"
                        android:layout_height="@dimen/px2dp_2"
                        android:background="#FFFFFF" />

                    <TextView
                        style="@style/TextStyle"
                        android:text="项目价值" />

                    <TextView
                        android:layout_width="@dimen/px2dp_400"
                        android:layout_height="@dimen/px2dp_2"
                        android:background="#FFFFFF" />

                    <TextView
                        style="@style/TextStyle"
                        android:text="预期剩余利息" />

                    <TextView
                        android:layout_width="@dimen/px2dp_400"
                        android:layout_height="@dimen/px2dp_2"
                        android:background="#FFFFFF" />

                    <TextView
                        style="@style/TextStyle"
                        android:text="剩余期限" />

                    <TextView
                        android:layout_width="@dimen/px2dp_400"
                        android:layout_height="@dimen/px2dp_2"
                        android:background="#FFFFFF" />

                    <TextView
                        style="@style/TextStyle"
                        android:text="最近赎回日" />
                </LinearLayout>

                <TextView
                    android:layout_width="@dimen/px2dp_2"
                    android:layout_height="@dimen/px2dp_320"
                    android:background="#FFFFFF" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_01"
                        style="@style/TextStyle"
                        android:layout_marginLeft="@dimen/px2dp_30"
                        android:text="@string/default_value" />

                    <TextView
                        android:layout_width="@dimen/px2dp_400"
                        android:layout_height="@dimen/px2dp_2"
                        android:background="#FFFFFF" />

                    <TextView
                        android:id="@+id/tv_02"
                        style="@style/TextStyle"
                        android:layout_marginLeft="@dimen/px2dp_30"
                        android:text="@string/default_value"
                        android:textColor="#2ea7e0" />

                    <TextView
                        android:layout_width="@dimen/px2dp_400"
                        android:layout_height="@dimen/px2dp_2"
                        android:background="#FFFFFF" />

                    <TextView
                        android:id="@+id/tv_03"
                        style="@style/TextStyle"
                        android:layout_marginLeft="@dimen/px2dp_30"
                        android:text="@string/default_value" />

                    <TextView
                        android:layout_width="@dimen/px2dp_400"
                        android:layout_height="@dimen/px2dp_2"
                        android:background="#FFFFFF" />

                    <TextView
                        android:id="@+id/tv_04"
                        style="@style/TextStyle"
                        android:layout_marginLeft="@dimen/px2dp_30"
                        android:text="@string/default_value" />

                    <TextView
                        android:layout_width="@dimen/px2dp_400"
                        android:layout_height="@dimen/px2dp_2"
                        android:background="#FFFFFF" />

                    <TextView
                        android:id="@+id/tv_05"
                        style="@style/TextStyle"
                        android:layout_marginLeft="@dimen/px2dp_30"
                        android:text="@string/default_value" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px2dp_30"
                android:layout_marginTop="@dimen/px2dp_38" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px2dp_18"
                    android:text="转让价格"
                    android:textSize="@dimen/px2dp_32" />

                <LinearLayout
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/big_price"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/px2dp_166"
                    android:layout_marginTop="@dimen/px2dp_35"
                    android:orientation="horizontal" >
                </LinearLayout>

                <TextView
                    android:id="@+id/big_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/px2dp_7"
                    android:layout_toRightOf="@+id/textView1"
                    android:text="@string/default_amount"
                    android:textColor="#2DA7E1"
                    android:textSize="@dimen/px2dp_54" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="@dimen/px2dp_32"
                    android:layout_height="@dimen/px2dp_32"
                    android:layout_alignBaseline="@+id/big_price"
                    android:layout_alignBottom="@+id/big_price"
                    android:layout_marginLeft="@dimen/px2dp_7"
                    android:layout_toRightOf="@+id/textView2"
                    android:text="￥"
                    android:textColor="#2ea7e0"
                    android:textSize="@dimen/px2dp_32" />

                <TextView
                    android:id="@+id/small_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView1"
                    android:layout_below="@+id/big_price"
                    android:layout_marginLeft="@dimen/px2dp_4"
                    android:text="@string/default_value"
                    android:textColor="#2ea7e0"
                    android:textSize="@dimen/px2sp_26" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView4"
                    android:layout_marginLeft="@dimen/px2dp_10"
                    android:layout_marginTop="@dimen/px2dp_12"
                    android:layout_toRightOf="@+id/textView2"
                    android:text="手续费=转让价格×0.25%="
                    android:textColor="#666666"
                    android:textSize="@dimen/px2dp_24" />

                <TextView
                    android:id="@+id/poundage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/px2dp_4"
                    android:layout_toRightOf="@+id/textView3"
                    android:text="@string/default_amount"
                    android:textColor="#666666"
                    android:textSize="@dimen/px2dp_24" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/card_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px2dp_54"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/info_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px2dp_30"
                    android:text="转让金额将会在T+3个工作日内汇入您原订单的支付银行卡"
                    android:textColor="#999999"
                    android:textSize="@dimen/px2sp_20" />

                <LinearLayout
                    android:id="@+id/card_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px2dp_30"
                    android:layout_marginRight="@dimen/px2dp_30"
                    android:layout_marginTop="@dimen/px2dp_15"
                    android:background="@drawable/card_item_blue_bg"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/px2dp_30"
                    android:paddingLeft="@dimen/px2dp_48"
                    android:paddingRight="@dimen/px2dp_63"
                    android:paddingTop="@dimen/px2dp_30" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px2dp_78" >

                        <ImageView
                            android:id="@+id/org_img"
                            android:layout_width="@dimen/px2dp_60"
                            android:layout_height="@dimen/px2dp_60"
                            android:layout_alignParentBottom="true"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerInside"
                            android:src="@drawable/grey_point" />

                        <TextView
                            android:id="@+id/org_name_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px2dp_16"
                            android:layout_toRightOf="@id/org_img"
                            android:text="@string/default_value"
                            android:textColor="#333333"
                            android:textSize="@dimen/px2sp_32" />

                        <TextView
                            android:id="@+id/address_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="@dimen/px2dp_16"
                            android:layout_toRightOf="@id/org_img"
                            android:text="@string/default_value"
                            android:textColor="#333333"
                            android:textSize="@dimen/px2sp_26" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px2dp_44"
                        android:layout_marginBottom="@dimen/px2dp_33"
                        android:layout_marginTop="@dimen/px2dp_22"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="****"
                            android:textColor="#999999"
                            android:textSize="@dimen/px2sp_40" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="****"
                            android:textColor="#999999"
                            android:textSize="@dimen/px2sp_40" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="****"
                            android:textColor="#999999"
                            android:textSize="@dimen/px2sp_40" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/card_code_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/default_value"
                            android:textColor="#333333"
                            android:textSize="@dimen/px2sp_40" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/name_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_value"
                        android:textColor="#666666"
                        android:textSize="@dimen/px2sp_26" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px2dp_20"
                    android:layout_marginTop="@dimen/px2dp_50"
                    android:background="#F2F2F2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px2dp_36"
                    android:layout_marginLeft="@dimen/px2dp_30" >

                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="需要用"
                        android:textColor="#666666"
                        android:textSize="@dimen/px2sp_26" />

                    <TextView
                        android:id="@+id/mobile_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/txt1"
                        android:layout_toRightOf="@id/txt1"
                        android:text="@string/default_value"
                        android:textColor="#2ca9de"
                        android:textSize="@dimen/px2sp_26" />

                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/txt1"
                        android:layout_toRightOf="@id/mobile_txt"
                        android:text="接收验证码"
                        android:textColor="#666666"
                        android:textSize="@dimen/px2sp_26" />

                    <View
                        android:id="@+id/line1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/txt1"
                        android:layout_marginBottom="@dimen/px2dp_18"
                        android:layout_marginTop="@dimen/px2dp_20"
                        android:background="#e9e9e9" />

                    <TextView
                        android:id="@+id/validate_txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/px2dp_70"
                        android:layout_below="@id/line1"
                        android:layout_marginRight="@dimen/px2dp_16"
                        android:gravity="center_vertical"
                        android:text="手机验证码"
                        android:textColor="#333333"
                        android:textSize="@dimen/px2sp_32" />

                    <EditText
                        android:id="@+id/validate_code_txt"
                        android:layout_width="@dimen/px2dp_200"
                        android:layout_height="@dimen/px2dp_70"
                        android:layout_below="@id/line1"
                        android:layout_toRightOf="@id/validate_txt1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入验证码"
                        android:textSize="@dimen/px2sp_28" />

                    <TextView
                        android:id="@+id/validate_code_btn"
                        android:layout_width="@dimen/px2dp_222"
                        android:layout_height="@dimen/px2dp_70"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/line1"
                        android:layout_marginRight="@dimen/px2dp_30"
                        android:background="@drawable/bg_blue_right_angle"
                        android:gravity="center"
                        android:text="@string/gainValidate"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/px2sp_28" />
                    <View
                        android:id="@+id/line2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/validate_code_btn"
                        android:layout_marginTop="@dimen/px2dp_18"
                        android:background="#e9e9e9" />
                    
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </com.miduo.financialmanageclient.widget.MyScrollView>

</com.miduo.financialmanageclient.widget.MyRelaLayout>