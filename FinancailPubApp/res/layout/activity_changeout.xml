<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <include
        android:id="@+id/ll"
        layout="@layout/top_title_layout" />

    <LinearLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:orientation="vertical"
        android:paddingLeft="@dimen/px2dp_30"
        android:paddingTop="@dimen/px2dp_42" >

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px2dp_30"
            android:lineSpacingExtra="@dimen/px2dp_20"
            android:text="@string/default_value"
            android:textColor="#333333"
            android:textSize="@dimen/px2dp_32" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px2dp_30"
            android:layout_marginTop="@dimen/px2dp_28"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转让单编号:"
                android:textColor="#666666"
                android:textSize="@dimen/px2dp_25" />

            <TextView
                android:id="@+id/bianhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px2dp_16"
                android:text="@string/default_value"
                android:textColor="#666666"
                android:textSize="@dimen/px2dp_30" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/px2dp_38"
            android:background="#CCCCCC" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/px2dp_44" >

            <LinearLayout
                android:id="@+id/ll_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px2dp_40"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/px2dp_130"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/px2dp_10"
                    android:text="转让价格"
                    android:textColor="#666666"
                    android:textSize="@dimen/px2dp_32" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/px2dp_10"
                    android:layout_marginLeft="@dimen/px2dp_10"
                    android:text="¥"
                    android:textColor="#2EA7E0"
                    android:textSize="@dimen/px2dp_26" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px2dp_10"
                    android:text="@string/default_amount"
                    android:textColor="#2EA7E0"
                    android:textSize="@dimen/px2dp_56" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/big_price"
                android:layout_marginTop="@dimen/px2dp_40"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/discount_type_txt"
                    android:layout_width="@dimen/px2dp_130"
                    android:layout_height="wrap_content"
                    android:text="已折价"
                    android:textColor="#666666"
                    android:textSize="@dimen/px2dp_32" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px2dp_10"
                    android:text="¥"
                    android:textColor="#666666"
                    android:textSize="@dimen/px2dp_26" />

                <TextView
                    android:id="@+id/zhekoujia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px2dp_10"
                    android:text="@string/default_amount"
                    android:textColor="#666666"
                    android:textSize="@dimen/px2dp_32" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout1"
                android:layout_marginTop="@dimen/px2dp_40"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="@dimen/px2dp_7"
                        android:text="我的收益率"
                        android:textColor="#2EA7E0"
                        android:textSize="@dimen/px2dp_26" />

                    <TextView
                        android:id="@+id/my_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/image_bg_blue"
                        android:gravity="center"
                        android:text="@string/default_value"
                        android:textColor="#2EA7E0"
                        android:textSize="@dimen/px2dp_26" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px2dp_15"
                        android:paddingRight="@dimen/px2dp_7"
                        android:text="对方收益率"
                        android:textColor="#80c209"
                        android:textSize="@dimen/px2dp_26" />

                    <TextView
                        android:id="@+id/you_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/image_bg_green"
                        android:gravity="center"
                        android:text="@string/default_value"
                        android:textColor="#80c209"
                        android:textSize="@dimen/px2dp_26" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/big_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/linearLayout1"
                android:layout_below="@+id/ll_01"
                android:layout_marginLeft="69dp"
                android:layout_marginTop="12dp"
                android:text="@string/default_value"
                android:textColor="#2EA7E0"
                android:textSize="@dimen/px2dp_24" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/space_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_20"
        android:layout_below="@id/name_layout"
        android:background="#F2F2F2" />

    <TextView
        android:id="@+id/product_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/space_view"
        android:layout_marginBottom="@dimen/px2dp_14"
        android:layout_marginLeft="@dimen/px2dp_30"
        android:layout_marginTop="@dimen/px2dp_44"
        android:text="产品信息"
        android:textColor="#999999"
        android:textSize="@dimen/px2dp_28" />

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px2dp_30"
            android:orientation="horizontal"
            android:paddingTop="@dimen/px2dp_26" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/timer"
                android:drawablePadding="@dimen/px2dp_10"
                android:text="转让到期时间"
                android:textColor="#999999"
                android:textSize="@dimen/px2dp_24" />

            <TextView
                android:id="@+id/end_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px2dp_14"
                android:text="@string/default_value"
                android:textColor="#999999"
                android:textSize="@dimen/px2dp_24" />
        </LinearLayout>

        <View
            android:id="@+id/bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/px2dp_34"
            android:background="#ececec" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_84"
            android:layout_margin="@dimen/px2dp_30"
            android:background="@drawable/button_bg_blue"
            android:text="取消转让"
            android:textColor="#ffffff"
            android:textSize="@dimen/px2dp_33" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_layout"
        android:layout_below="@id/product_title_txt"
        android:layout_marginLeft="@dimen/px2dp_30"
        android:layout_marginRight="@dimen/px2dp_30"
        android:divider="@null" >
    </ListView>

</RelativeLayout>