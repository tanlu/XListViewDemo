<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <include layout="@layout/top_title_layout" />

    <TextView
        android:id="@+id/tv_proname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px2dp_30"
        android:layout_marginRight="@dimen/px2dp_30"
        android:layout_marginTop="@dimen/px2dp_46"
        android:text="@string/default_value"
        android:textColor="#000000"
        android:textSize="@dimen/px2sp_36" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px2dp_30"
        android:layout_marginRight="@dimen/px2dp_30"
        android:layout_marginTop="@dimen/px2dp_44"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:text="投资金额"
            android:textColor="#000000"
            android:textSize="@dimen/px2sp_32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px2dp_22"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/px2dp_22"
            android:text="￥"
            android:textColor="#2da7e1"
            android:textSize="@dimen/px2sp_32" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/px2dp_30"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px2dp_6"
            android:text="@string/default_amount"
            android:textColor="#2da7e1"
            android:textSize="@dimen/px2sp_54" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_moneytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px2dp_178"
        android:layout_marginTop="@dimen/px2dp_20"
        android:text="@string/default_value"
        android:textColor="#2da7e1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_20"
        android:layout_marginTop="@dimen/px2dp_42"
        android:background="#f2f2f2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <com.miduo.financialmanageclient.widget.AddCardInfoView
            android:id="@+id/addCardInfoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </com.miduo.financialmanageclient.widget.AddCardInfoView>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_nextstep"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_90"
        android:layout_marginBottom="@dimen/px2dp_38"
        android:layout_marginLeft="@dimen/px2dp_30"
        android:layout_marginRight="@dimen/px2dp_30"
        android:background="@drawable/button_bg_blue"
        android:gravity="center"
        android:text="下一步"
        android:textColor="#ffffff"
        android:textSize="@dimen/px2sp_34" />

</LinearLayout>