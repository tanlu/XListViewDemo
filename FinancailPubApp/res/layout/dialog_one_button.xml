<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_item_white_bg" >

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px2dp_30"
        android:gravity="center_horizontal"
        android:text="@string/default_value"
        android:textColor="#333333"
        android:textSize="@dimen/px2dp_30" />

    <TextView
        android:id="@+id/content_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_txt"
        android:layout_marginBottom="@dimen/px2dp_14"
        android:layout_marginLeft="@dimen/px2dp_44"
        android:layout_marginRight="@dimen/px2dp_44"
        android:layout_marginTop="@dimen/px2dp_24"
        android:lineSpacingExtra="@dimen/px2dp_10"
        android:text="@string/default_value"
        android:textColor="#333333"
        android:textSize="@dimen/px2dp_34" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/content_txt"
        android:background="#ebebeb" />

    <TextView
        android:id="@+id/confirm_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_90"
        android:layout_below="@id/line"
        android:gravity="center"
        android:text="@string/default_value"
        android:textColor="#2ea7e0"
        android:textSize="@dimen/px2sp_34" />

</RelativeLayout>