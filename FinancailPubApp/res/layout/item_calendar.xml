<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff" >

    <View
        android:layout_width="@dimen/px2dp_3"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/px2dp_35"
        android:background="#f2f2f2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px2dp_28" >

            <ImageView
                android:id="@+id/iv_point"
                android:layout_width="@dimen/px2dp_12"
                android:layout_height="@dimen/px2dp_12"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px2dp_30"
                android:src="@drawable/point_blue1" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px2dp_26"
                android:layout_toRightOf="@id/iv_point"
                android:text="@string/default_value"
                android:textColor="#999999"
                android:textSize="@dimen/px2sp_26" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px2dp_144"
                android:text="@string/default_value"
                android:textColor="#333333"
                android:textSize="@dimen/px2sp_36" />

            <TextView
                android:id="@+id/tv_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px2dp_30"
                android:background="@drawable/frame_bg_blue"
                android:paddingBottom="@dimen/px2dp_14"
                android:paddingLeft="@dimen/px2dp_18"
                android:paddingRight="@dimen/px2dp_18"
                android:paddingTop="@dimen/px2dp_14"
                android:text="设置提醒"
                android:textColor="#2ea7e0" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_top"
            android:layout_marginLeft="@dimen/px2dp_144"
            android:layout_marginTop="@dimen/px2dp_10"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_surplus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_value"
                android:textColor="#999999"
                android:textSize="@dimen/px2sp_26" />

            <TextView
                android:id="@+id/tv_proname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px2dp_28"
                android:text="@string/default_value"
                android:textColor="#666666"
                android:textSize="@dimen/px2sp_30" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px2dp_14"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单金额："
                    android:textColor="#666666"
                    android:textSize="@dimen/px2sp_30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="#666666"
                    android:textSize="@dimen/px2sp_30" />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_amount"
                    android:textColor="#666666"
                    android:textSize="@dimen/px2sp_30" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px2dp_34"
                android:text="@string/default_value"
                android:textColor="#2da8df"
                android:textSize="@dimen/px2sp_26" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_2"
            android:layout_below="@+id/ll_center"
            android:layout_marginLeft="@dimen/px2dp_36"
            android:layout_marginTop="@dimen/px2dp_42"
            android:background="#f2f2f2" />
    </RelativeLayout>

</FrameLayout>