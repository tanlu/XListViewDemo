<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <include layout="@layout/top_title_layout" />


    <TextView 
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您正在申请："
        android:textSize="@dimen/px2sp_32"
        android:layout_marginTop="@dimen/px2dp_126"
        android:textColor="#2ea7e0"
        />
    <TextView 
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px2dp_116"
        android:textSize="@dimen/px2sp_32"
        />
    <TextView 
        android:id="@+id/tv_new"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px2dp_38"
        android:textSize="@dimen/px2sp_32"
        />
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px2dp_68"
        android:layout_marginRight="@dimen/px2dp_40"
        android:text="@string/replaceplanner_tip"
        android:lineSpacingExtra="@dimen/px2dp_20"
        android:textColor="#999999"
        android:layout_marginTop="@dimen/px2dp_118"
        />
    <View 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_224"
        android:layout_marginLeft="@dimen/px2dp_30"
        android:layout_marginRight="@dimen/px2dp_30"
        android:orientation="vertical"
        android:background="@drawable/frame_bg_gray"
        >
       <EditText 
           android:layout_margin="@dimen/px2dp_26"
           android:id="@+id/et_suggest"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="@dimen/px2sp_32"
           android:hint="请告诉我们您对原理财顾问的看法和建议"
           android:textColorHint="#999999"
           android:background="@null"
           android:textColor="#999999"
           /> 
    </LinearLayout>
    <TextView 
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_90"
        android:gravity="center"
        android:text="确认提交"
        android:textColor="#ffffff"
        android:textSize="@dimen/px2sp_34"
        android:layout_margin="@dimen/px2dp_30"
        android:background="@drawable/button_bg_blue"
        />
</LinearLayout>