<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/current_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_92"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px2dp_32"
        android:paddingRight="@dimen/px2dp_40" >

        <ImageView
            android:id="@+id/iv_bankicon"
            android:layout_width="@dimen/px2dp_40"
            android:layout_height="@dimen/px2dp_40"
            android:layout_gravity="center_vertical"
            android:src="@drawable/grey_point" />

        <TextView
            android:id="@+id/tv_bankname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px2dp_10"
            android:textColor="#333333"
            android:textSize="@dimen/px2sp_32" />

        <ImageView
            android:id="@+id/iv_uparrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/up_arrow"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>