<?xml version="1.0" encoding="utf-8"?>
<com.miduo.financialmanageclient.widget.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/ll_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <include layout="@layout/top_title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_270"
        android:orientation="vertical" >

        <TextView
            android:singleLine="true"
            android:layout_marginLeft="@dimen/px2dp_30"
            android:layout_marginRight="@dimen/px2dp_30"
            android:id="@+id/tv_productname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px2dp_56"
            android:gravity="center_horizontal"
            android:text="@string/default_value"
            android:textColor="#000000"
            android:textSize="@dimen/px2sp_36" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px2dp_56"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_startamount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/default_numerical"
                        android:textColor="#999999"
                        android:textSize="@dimen/px2dp_36" />

                    <TextView
                        android:id="@+id/tv_startunit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:textColor="#999999"
                        android:textSize="@dimen/px2sp_26" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_starttip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="起投"
                    android:textColor="#999999" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_incrementacmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/default_numerical"
                        android:textColor="#999999"
                        android:textSize="@dimen/px2dp_36" />

                    <TextView
                        android:id="@+id/tv_incrementunit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:textColor="#999999"
                        android:textSize="@dimen/px2sp_26" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_incrementtip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="递增"
                    android:textColor="#999999" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_totalamount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/default_numerical"
                        android:textColor="#999999"
                        android:textSize="@dimen/px2dp_36" />
                     <TextView
                        android:id="@+id/tv_totalunitwan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="万"
                        android:textColor="#999999"
                        android:textSize="@dimen/px2sp_26" />

                    <TextView
                        android:id="@+id/tv_totalunit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:textColor="#999999"
                        android:textSize="@dimen/px2sp_26" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_totaltip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="最多可投"
                    android:textColor="#999999" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_20"
        android:background="#f2f2f2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px2dp_44"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px2dp_30"
            android:paddingTop="@dimen/px2dp_22"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="投资金额"
            android:textColor="#000000"
            android:textSize="@dimen/px2sp_32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px2dp_22"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/px2dp_22"
            android:text="￥"
            android:textColor="#2da7e1"
            android:textSize="@dimen/px2sp_32" />

        <EditText
            android:id="@+id/et_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:numeric="integer"
            android:textColor="#2da7e1"
            android:textSize="@dimen/px2sp_54" />

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/px2dp_30"
            android:src="@drawable/delete" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px2dp_188"
        android:layout_marginTop="@dimen/px2dp_20"
        android:textColor="#2da7e1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_2"
        android:layout_marginLeft="@dimen/px2dp_28"
        android:layout_marginRight="@dimen/px2dp_28"
        android:layout_marginTop="@dimen/px2dp_46"
        android:background="#f2f2f2" />

    <LinearLayout
        android:id="@+id/ll_profit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px2dp_30"
        android:layout_marginTop="@dimen/px2dp_44"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="到期预计总收益"
            android:textColor="#000000"
            android:textSize="@dimen/px2sp_34" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px2dp_20"
            android:text="￥"
            android:textColor="#000000"
            android:textSize="@dimen/px2sp_34" />

        <TextView
            android:id="@+id/tv_totalrevenue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px2dp_6"
            android:text="@string/default_amount"
            android:textColor="#000000"
            android:textSize="@dimen/px2sp_34" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_90"
        android:layout_marginBottom="@dimen/px2dp_38"
        android:layout_marginLeft="@dimen/px2dp_30"
        android:layout_marginRight="@dimen/px2dp_30"
        android:background="@drawable/button_bg_blue"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:text="同意协议并生成订单"
        android:textColor="#ffffff"
        android:textSize="@dimen/px2sp_34" />

</com.miduo.financialmanageclient.widget.MyLinearLayout>