<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <include
        android:id="@+id/top_layout"
        layout="@layout/top_title_layout" />

    <LinearLayout
        android:id="@+id/progress_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_layout"
        android:background="#fafafa"
        android:orientation="vertical"
        android:paddingBottom="@dimen/px2dp_25"
        android:paddingTop="@dimen/px2dp_34" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px2dp_56"
            android:layout_marginRight="@dimen/px2dp_56"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/one_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_process"
                android:gravity="center"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="@dimen/px2sp_26" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#dfdfdf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_process"
                android:gravity="center"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="@dimen/px2sp_26" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#dfdfdf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_process"
                android:gravity="center"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="@dimen/px2sp_26" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#dfdfdf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_process"
                android:gravity="center"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="@dimen/px2sp_26" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#dfdfdf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_process"
                android:gravity="center"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="@dimen/px2sp_26" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px2dp_27"
            android:text="了解您的风险偏好以便作出专业的投资规划"
            android:textColor="#666666"
            android:textSize="@dimen/px2sp_32" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px2dp_69"
        android:layout_below="@id/progress_layout"
        android:layout_marginTop="@dimen/px2dp_66"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px2dp_56"            
            android:gravity="center_vertical"
            android:text="您的年龄"
            android:textColor="#333333"
            android:textSize="@dimen/px2sp_32" />

        <EditText
            android:id="@+id/age_txt"
            android:layout_width="@dimen/px2dp_184"
            android:layout_height="match_parent"
            android:background="@drawable/grey_text_bg"
            android:layout_marginLeft="@dimen/px2dp_20"
            android:layout_marginRight="@dimen/px2dp_20"
            android:gravity="center" 
            android:textColor="#2da8df"
            android:inputType="number"
            android:textSize="@dimen/px2sp_32"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"           
            android:gravity="center_vertical"
            android:text="岁"
            android:textColor="#333333"
            android:textSize="@dimen/px2sp_32" />
        
    </LinearLayout>
    
    <TextView
        android:id="@+id/next_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/px2dp_30"
        android:layout_marginLeft="@dimen/px2dp_30"
        android:layout_marginRight="@dimen/px2dp_30"
        android:background="@drawable/blue_round_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/px2dp_26"
        android:paddingTop="@dimen/px2dp_26"
        android:text="下一步"
        android:textColor="#ffffff"
        android:textSize="@dimen/px2sp_34" />

</RelativeLayout>