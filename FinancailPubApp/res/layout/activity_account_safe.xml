<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <include
        android:id="@+id/top_layout"
        layout="@layout/top_title_layout" />

    <RelativeLayout
        android:id="@+id/login_psd_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_102"
        android:layout_below="@id/top_layout"
        android:layout_marginTop="@dimen/px2dp_2" >

        <ImageView
            android:id="@+id/login_psd_img"
            android:layout_width="@dimen/px2dp_42"
            android:layout_height="@dimen/px2dp_42"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/px2dp_14"
            android:layout_marginLeft="@dimen/px2dp_56"
            android:layout_marginRight="@dimen/px2dp_16"
            android:scaleType="center"
            android:src="@drawable/grey_psd" />

        <TextView
            android:id="@+id/login_psd_txt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px2dp_42"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/px2dp_14"
            android:layout_toRightOf="@id/login_psd_img"
            android:gravity="center_vertical"
            android:text="修改登录密码"
            android:textColor="#333333"
            android:textSize="@dimen/px2sp_34" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/login_psd_img"
            android:background="#ececec" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/gesture_psd_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_102"
        android:layout_below="@id/login_psd_layout" >

        <ImageView
            android:id="@+id/gesture_psd_img"
            android:layout_width="@dimen/px2dp_42"
            android:layout_height="@dimen/px2dp_42"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/px2dp_14"
            android:layout_marginLeft="@dimen/px2dp_56"
            android:layout_marginRight="@dimen/px2dp_16"
            android:scaleType="center"
            android:src="@drawable/grey_psd" />

        <TextView
            android:id="@+id/gesture_txt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px2dp_42"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/px2dp_14"
            android:layout_toRightOf="@id/gesture_psd_img"
            android:gravity="center_vertical"
            android:text="修改手势密码"
            android:textColor="#333333"
            android:textSize="@dimen/px2sp_34" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/gesture_psd_img"
            android:background="#ececec" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/push_msg_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_102"
        android:layout_below="@id/gesture_psd_layout"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/push_msg_img"
            android:layout_width="@dimen/px2dp_42"
            android:layout_height="@dimen/px2dp_42"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/px2dp_14"
            android:layout_marginLeft="@dimen/px2dp_56"
            android:layout_marginRight="@dimen/px2dp_16"
            android:scaleType="center"
            android:src="@drawable/grey_msg" />

        <TextView
            android:id="@+id/push_msg_txt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px2dp_42"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/px2dp_14"
            android:layout_toRightOf="@id/push_msg_img"
            android:gravity="center_vertical"
            android:text="接收推送消息"
            android:textColor="#333333"
            android:textSize="@dimen/px2sp_34" />


        
        <CheckBox
            android:id="@+id/set_push_checked"
            android:layout_width="@dimen/px2dp_69"
            android:layout_height="@dimen/px2dp_39"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/px2dp_14"
            android:layout_marginRight="@dimen/px2dp_58"
            android:background="@drawable/checkedbtn"
            android:button="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/push_msg_img"
            android:background="#ececec" />
    </RelativeLayout>

    <TextView
        android:id="@+id/btn_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/px2dp_30"
        android:layout_marginLeft="@dimen/px2dp_30"
        android:layout_marginRight="@dimen/px2dp_30"
        android:background="@drawable/blue_round_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/px2dp_26"
        android:paddingTop="@dimen/px2dp_26"
        android:text="安全退出"
        android:textColor="#ffffff"
        android:textSize="@dimen/px2sp_34" />

</RelativeLayout>