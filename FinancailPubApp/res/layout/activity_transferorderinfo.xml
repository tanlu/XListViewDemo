<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <include
        android:id="@+id/ll"
        layout="@layout/top_title_layout" />

    <LinearLayout
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_84"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/px2dp_30"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/shuhui"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_bg_blue_line"
            android:text="产品资料"
            android:textColor="#2EA7E0" />

        <View
            android:layout_width="@dimen/px2dp_30"
            android:layout_height="match_parent"
            android:background="#ffffff" />

        <Button
            android:id="@+id/zdzh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_bg_blue"
            android:text="我要投资"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button"
        android:layout_below="@id/ll"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px2dp_30"
                    android:layout_marginRight="@dimen/px2dp_10"
                    android:layout_marginTop="@dimen/px2dp_46"
                    android:text="@string/default_value"
                    android:textColor="#333333"
                    android:textSize="@dimen/px2dp_32" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px2dp_35"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/px2dp_30"
                        android:drawableLeft="@drawable/shijian"
                        android:drawablePadding="@dimen/px2dp_4"
                        android:text="转账到期时间"
                        android:textColor="#2ca9de"
                        android:textSize="@dimen/px2dp_24" />

                    <TextView
                        android:id="@+id/zr_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/px2dp_30"
                        android:text="@string/default_value"
                        android:textColor="#2ca9de"
                        android:textSize="@dimen/px2dp_24" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp_1"
                android:layout_marginLeft="@dimen/px2dp_30"
                android:layout_marginTop="@dimen/px2dp_40"
                android:background="#CCCCCC" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp_323" >

                <LinearLayout
                    android:id="@+id/ll_01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px2dp_30"
                    android:layout_marginTop="@dimen/px2dp_30"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/px2dp_10"
                        android:text="转让价格"
                        android:textColor="#666666"
                        android:textSize="@dimen/px2dp_32" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/px2dp_10"
                        android:layout_marginLeft="@dimen/px2dp_10"
                        android:text="¥"
                        android:textColor="#2EA7E0"
                        android:textSize="@dimen/px2dp_26" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px2dp_10"
                        android:text="@string/default_amount"
                        android:textColor="#2EA7E0"
                        android:textSize="@dimen/px2dp_56" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/big_price"
                    android:layout_marginLeft="@dimen/px2dp_30"
                    android:layout_marginTop="@dimen/px2dp_30"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/premium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已  折  价"
                        android:textColor="#666666"
                        android:textSize="@dimen/px2dp_32" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px2dp_10"
                        android:text="¥"
                        android:textColor="#666666"
                        android:textSize="@dimen/px2dp_26" />

                    <TextView
                        android:id="@+id/zhekoujia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px2dp_10"
                        android:text="@string/default_amount"
                        android:textColor="#666666"
                        android:textSize="@dimen/px2dp_32" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/linearLayout1"
                    android:layout_marginTop="@dimen/px2dp_20"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px2dp_30"
                        android:text="持有到期收益率"
                        android:textColor="#666666"
                        android:textSize="@dimen/px2dp_32" />

                    <TextView
                        android:id="@+id/trans_shouyilv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px2dp_4"
                        android:text="@string/default_value"
                        android:textColor="#666666"
                        android:textSize="@dimen/px2dp_32" />

                </LinearLayout>

                <TextView
                    android:id="@+id/big_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/linearLayout1"
                    android:layout_below="@+id/ll_01"
                    android:layout_marginLeft="69dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/default_value"
                    android:textColor="#2EA7E0"
                    android:textSize="@dimen/px2dp_24" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp_20"
                android:background="#F2F2F2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/px2dp_30"
                android:text="产品信息"
                android:textColor="#666666"
                android:textSize="@dimen/px2dp_28" />

            <ListView
                android:id="@+id/product_info_lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:divider="@android:color/transparent"
                android:dividerHeight="@dimen/px2dp_3"
                android:paddingLeft="@dimen/px2dp_28"
                android:paddingRight="@dimen/px2dp_28" >
            </ListView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>