<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px2dp_30"
        android:layout_marginRight="@dimen/px2dp_30"
        android:layout_marginBottom="@dimen/px2dp_52"
         >

        <com.miduo.financialmanageclient.widget.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/px2dp_110"
            android:layout_height="@dimen/px2dp_110"
            android:layout_marginTop="@dimen/px2dp_63"
            android:src="@drawable/ifa_defaulthead" />

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/px2dp_1"
            android:layout_height="@dimen/px2dp_147"
            android:layout_marginLeft="@dimen/px2dp_34"
            android:layout_marginTop="@dimen/px2dp_52"
            android:layout_toRightOf="@id/iv_head"
            android:background="#e4e4e4" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px2dp_32"
            android:layout_marginTop="@dimen/px2dp_52"
            android:layout_toRightOf="@id/view"
            android:text="@string/default_value"
            android:textColor="#333333"
            android:textSize="@dimen/px2sp_32" />

        <TextView
            android:id="@+id/tv_qualifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_name"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="@dimen/px2dp_16"
            android:text="@string/default_value"
            android:textColor="#333333"
            android:textSize="@dimen/px2sp_30" />

        <TextView
            android:id="@+id/tv_tips"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_name"
            android:layout_below="@id/tv_qualifications"
            android:layout_marginTop="@dimen/px2dp_32"
            android:text="@string/default_value"
            android:textColor="#999999"
            android:textSize="@dimen/px2sp_26" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/px2dp_56"
            android:text="@string/default_value"
            android:textColor="#999999"
            android:textSize="@dimen/px2sp_24" />
    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_1"
            
            android:background="#e4e4e4" />

        <TextView
            android:id="@+id/tv_select"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_80"
            android:layout_marginBottom="@dimen/px2dp_35"
            android:layout_marginLeft="@dimen/px2dp_30"
            android:layout_marginRight="@dimen/px2dp_30"
            android:layout_marginTop="@dimen/px2dp_35"
            android:background="@drawable/button_bg_blue"
            android:gravity="center"
            android:text="选为我的理财顾问"
            android:textColor="#ffffff"
            android:textSize="@dimen/px2dp_32" />
    </LinearLayout>
    

</LinearLayout>