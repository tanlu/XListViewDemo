<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <include layout="@layout/top_title_layout" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px2dp_90"
        android:src="@drawable/blue_commite" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px2dp_16"
        android:gravity="center_horizontal"
        android:text="您的转让申请已成功提交！"
        android:textColor="#2ea7e0"
        android:textSize="@dimen/px2sp_40" />

    <View
        android:layout_width="@dimen/px2dp_2"
        android:layout_height="@dimen/px2dp_85"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px2dp_24"
        android:background="#2ea7e0" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px2dp_24"
        android:src="@drawable/blue_wait" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px2dp_20"
        android:gravity="center_horizontal"
        android:text="等待其他投资者购买"
        android:textColor="#2ea7e0"
        android:textSize="@dimen/px2sp_40" />

    <TextView
        android:layout_width="@dimen/px2dp_406"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/px2dp_10"
        android:layout_marginTop="@dimen/px2dp_20"
        android:text="超过24小时未成交，转让将自动取消，不会产生任何费用"
        android:textColor="#000000"
        android:textSize="@dimen/px2sp_24" />

    <View
        android:layout_width="@dimen/px2dp_2"
        android:layout_height="@dimen/px2dp_85"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px2dp_28"
        android:background="#999999" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px2dp_20"
        android:src="@drawable/grey_success" />

    <TextView
        android:id="@+id/tv_interestDate"
        android:layout_width="@dimen/px2dp_474"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px2dp_20"
        android:lineSpacingExtra="@dimen/px2dp_10"
        android:text="成交后转让金额将在T+3个工作日内转入您指定的收款账户，您可以在“米仓”-“米多总资产”-“历史订单”中查看已赎回的产品"
        android:textColor="#999999"
        android:textSize="@dimen/px2sp_24" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_iknow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_90"
        android:layout_marginBottom="@dimen/px2dp_38"
        android:layout_marginLeft="@dimen/px2dp_30"
        android:layout_marginRight="@dimen/px2dp_30"
        android:background="@drawable/button_bg_blue"
        android:gravity="center"
        android:text="我知道了"
        android:textColor="#ffffff"
        android:textSize="@dimen/px2sp_34" />

</LinearLayout>