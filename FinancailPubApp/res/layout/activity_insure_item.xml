<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customer="http://schemas.android.com/apk/res/com.miduo.financialmanageclient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <include
        android:id="@+id/top_layout"
        layout="@layout/top_title_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical"
            android:paddingBottom="@dimen/px2dp_20"
            android:paddingTop="@dimen/px2dp_26" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="基于您的回答为您提供全方位的保险规划"
                android:textColor="#666666"
                android:textSize="@dimen/px2sp_32" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/px2dp_84"
                android:layout_marginRight="@dimen/px2dp_84"
                android:layout_marginTop="@dimen/px2dp_25"
                android:background="#1cc8e9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp_62"
                android:layout_marginLeft="@dimen/px2dp_82"
                android:layout_marginRight="@dimen/px2dp_82"
                android:orientation="horizontal" >

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#1cc8e9" />

                <TextView
                    android:id="@+id/owner_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_blue_right_angle"
                    android:gravity="center"
                    android:text="本\u3000人"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/px2sp_32" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#1cc8e9" />

                <TextView
                    android:id="@+id/spouse_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="配\u3000偶"
                    android:textColor="#666666"
                    android:textSize="@dimen/px2sp_32" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#1cc8e9" />

                <TextView
                    android:id="@+id/child_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="子\u3000女"
                    android:textColor="#666666"
                    android:textSize="@dimen/px2sp_32" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#1cc8e9" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/px2dp_30"
                android:layout_marginLeft="@dimen/px2dp_82"
                android:layout_marginRight="@dimen/px2dp_82"
                android:background="#1cc8e9" />

            <com.miduo.financialmanageclient.widget.InvestmentBarPic
                android:id="@+id/investmentBarPic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp_406"
                android:layout_marginTop="@dimen/px2dp_26"
                android:background="@drawable/testresult"
                customer:leftPadding="@dimen/px2dp_80"
                customer:perBarPadding="@dimen/px2dp_54" />

            <com.miduo.financialmanageclient.widget.InvestmentBarPic
                android:id="@+id/investmentBarPic2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp_406"
                android:layout_marginTop="@dimen/px2dp_26"
                android:background="@drawable/testresult"
                android:visibility="gone"
                customer:leftPadding="@dimen/px2dp_156"
                customer:perBarPadding="@dimen/px2dp_54" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp_1"
                android:background="#0d9fd2" />

            <LinearLayout
                android:id="@+id/ll_layout1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp_60"
                android:layout_marginLeft="@dimen/px2dp_52"
                android:layout_marginRight="@dimen/px2dp_52"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/name_txt1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/default_value"
                    android:textColor="#333333"
                    android:textSize="@dimen/px2sp_24" />

                <TextView
                    android:id="@+id/name_txt2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/default_value"
                    android:textColor="#333333"
                    android:textSize="@dimen/px2sp_24" />

                <TextView
                    android:id="@+id/name_txt3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/default_value"
                    android:textColor="#333333"
                    android:textSize="@dimen/px2sp_24" />

                <TextView
                    android:id="@+id/name_txt4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/default_value"
                    android:textColor="#333333"
                    android:textSize="@dimen/px2sp_24" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_layout2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp_60"
                android:layout_marginLeft="@dimen/px2dp_130"
                android:layout_marginRight="@dimen/px2dp_130"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="意外险"
                    android:textColor="#333333"
                    android:textSize="@dimen/px2sp_24" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="重疾险"
                    android:textColor="#333333"
                    android:textSize="@dimen/px2sp_24" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="医疗险"
                    android:textColor="#333333"
                    android:textSize="@dimen/px2sp_24" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f2f2f2"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/px2dp_20"
                android:paddingLeft="@dimen/px2dp_70"
                android:paddingTop="@dimen/px2dp_38" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试时间："
                    android:textColor="#333333"
                    android:textSize="@dimen/px2sp_32" />

                <TextView
                    android:id="@+id/time_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value"
                    android:textColor="#333333"
                    android:textSize="@dimen/px2sp_28" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ower_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px2dp_70"
                android:paddingBottom="@dimen/px2dp_20"
                android:paddingTop="@dimen/px2dp_22" >

                <TextView
                    android:id="@+id/owner_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/px2dp_10"
                    android:text="本人："
                    android:textColor="#666666"
                    android:textSize="@dimen/px2sp_26" />

                <TextView
                    android:id="@+id/row1_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/owner_txt"
                    android:text="@string/default_value"
                    android:textColor="#666666"
                    android:textSize="@dimen/px2sp_26" />

                <TextView
                    android:id="@+id/row2_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/row1_txt"
                    android:layout_below="@id/owner_txt"
                    android:text="@string/default_value"
                    android:textColor="#666666"
                    android:textSize="@dimen/px2sp_26" />
            </RelativeLayout>

            <View
                android:id="@+id/spouse_liner"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/px2dp_70"
                android:background="#ececec" />

            <RelativeLayout
                android:id="@+id/spouse_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px2dp_70"
                android:paddingBottom="@dimen/px2dp_20"
                android:paddingTop="@dimen/px2dp_22" >

                <TextView
                    android:id="@+id/spouse_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/px2dp_10"
                    android:text="配偶："
                    android:textColor="#666666"
                    android:textSize="@dimen/px2sp_26" />

                <TextView
                    android:id="@+id/row3_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/spouse_txt"
                    android:text="@string/default_value"
                    android:textColor="#666666"
                    android:textSize="@dimen/px2sp_26" />

                <TextView
                    android:id="@+id/row4_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/row3_txt"
                    android:layout_below="@id/spouse_txt"
                    android:text="@string/default_value"
                    android:textColor="#666666"
                    android:textSize="@dimen/px2sp_26" />
            </RelativeLayout>

            <View
                android:id="@+id/child_liner"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/px2dp_70"
                android:background="#ececec" />

            <LinearLayout
                android:id="@+id/child_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px2dp_70"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/px2dp_20"
                android:paddingTop="@dimen/px2dp_22" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="子女信息："
                    android:textColor="#666666"
                    android:textSize="@dimen/px2sp_26" />

                <TextView
                    android:id="@+id/child_info_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value"
                    android:textColor="#666666"
                    android:textSize="@dimen/px2sp_26" />
            </LinearLayout>

            <View
                android:id="@+id/parent_liner"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/px2dp_70"
                android:background="#ececec" />

            <LinearLayout
                android:id="@+id/parent_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px2dp_70"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/px2dp_20"
                android:paddingTop="@dimen/px2dp_22"
                android:textColor="#666666"
                android:textSize="@dimen/px2sp_26" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="父母信息："
                    android:textColor="#666666"
                    android:textSize="@dimen/px2sp_26" />

                <TextView
                    android:id="@+id/parent_info_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value"
                    android:textColor="#666666"
                    android:textSize="@dimen/px2sp_26" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/px2dp_70"
                android:background="#ececec" />

            <LinearLayout
                android:id="@+id/family_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px2dp_70"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/px2dp_20"
                android:paddingTop="@dimen/px2dp_22" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="家庭信息："
                    android:textColor="#666666"
                    android:textSize="@dimen/px2sp_26" />

                <TextView
                    android:id="@+id/family_info_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value"
                    android:textColor="#666666"
                    android:textSize="@dimen/px2sp_26" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/px2dp_70"
                android:background="#ececec" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>