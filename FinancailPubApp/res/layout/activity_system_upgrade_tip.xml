<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/commit1"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px2dp_80"
            android:src="@drawable/commit2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px2dp_12"
            android:gravity="center_horizontal"
            android:text="米多财富管理"
            android:textColor="#ffffff"
            android:textSize="@dimen/px2sp_30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_540"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px2dp_60"
                android:text="亲爱的用户："
                android:textColor="#ffffff"
                android:textSize="@dimen/px2sp_32" />

            <TextView
                android:id="@+id/desc_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px2dp_72"
                android:layout_marginRight="@dimen/px2dp_64"
                android:layout_marginTop="@dimen/px2dp_36"
                android:lineSpacingExtra="@dimen/px2dp_20"
                android:text="@string/default_value"
                android:textColor="#ffffff"
                android:textSize="@dimen/px2sp_32" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_layout" >

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px2dp_30"
            android:text="为您带来不便深表歉意"
            android:textColor="#f25656"
            android:textSize="@dimen/px2sp_28" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px2dp_10"
            android:text="感谢您对米多财富的关注与支持"
            android:textColor="#f25656"
            android:textSize="@dimen/px2sp_28" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/px2dp_30"
            android:layout_marginRight="@dimen/px2dp_30"
            android:layout_marginBottom="@dimen/px2dp_50"
            android:orientation="vertical"
            android:padding="@dimen/px2dp_30"
            android:background="@drawable/system_info_bg" >

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="若有疑问，请拨打米多客服热线"
                android:textColor="#666666"
                android:textSize="@dimen/px2sp_28" />

            <TextView
                android:id="@+id/txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/px2dp_10"
                android:text="400-6666-766"
                android:textColor="#333333"
                android:textSize="@dimen/px2sp_28" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>