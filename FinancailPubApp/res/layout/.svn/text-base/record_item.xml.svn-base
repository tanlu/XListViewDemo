<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f2" >

    <RelativeLayout
        android:id="@+id/left_layout"
        android:layout_width="@dimen/px2dp_16"
        android:layout_height="@dimen/px2dp_30"
        android:layout_marginLeft="@dimen/px2dp_30" >

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="#e0e0e0" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/left_layout"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/left_layout"
            android:layout_width="@dimen/px2dp_16"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px2dp_30" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="#e0e0e0" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/point_blue2" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/px2dp_106"
            android:layout_marginLeft="@dimen/px2dp_25"
            android:layout_marginRight="@dimen/px2dp_25"
            android:layout_weight="1"
            android:background="@drawable/item_bg" >

            <TextView
                android:id="@+id/name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px2dp_48"
                android:text="@string/default_value"
                android:textColor="#333333"
                android:textSize="@dimen/px2sp_34" />

            <TextView
                android:id="@+id/time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/default_value"
                android:textColor="#999999"
                android:layout_marginRight="@dimen/px2dp_36"
                android:textSize="@dimen/px2sp_26" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/sub_sel_img"
            android:layout_width="@dimen/px2dp_34"
            android:layout_height="@dimen/px2dp_34"
            android:scaleType="center"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/px2dp_30"
            android:src="@drawable/select" />
    </LinearLayout>

</RelativeLayout>