<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/top_title_layout" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px2dp_30"
            android:layout_marginRight="@dimen/px2dp_10"
            android:layout_marginTop="@dimen/px2dp_46"
            android:text="@string/default_value"
            android:textColor="#333333"
            android:textSize="@dimen/px2dp_32" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px2dp_35"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px2dp_30"
                android:drawableLeft="@drawable/timer"
                android:drawablePadding="@dimen/px2dp_4"
                android:text="转账到期时间"
                android:textColor="#999999"
                android:textSize="@dimen/px2dp_24" />

            <TextView
                android:id="@+id/zr_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px2dp_30"
                android:text="@string/default_value"
                android:textColor="#999999"
                android:textSize="@dimen/px2dp_24" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_1"
            android:layout_marginLeft="@dimen/px2dp_30"
            android:layout_marginTop="@dimen/px2dp_40"
            android:background="#CCCCCC" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/ll_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px2dp_30"
                android:layout_marginTop="@dimen/px2dp_30"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/px2dp_10"
                    android:text="转让价格"
                    android:textColor="#666666"
                    android:textSize="@dimen/px2dp_32" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/px2dp_10"
                    android:layout_marginLeft="@dimen/px2dp_10"
                    android:text="¥"
                    android:textColor="#2EA7E0"
                    android:textSize="@dimen/px2dp_26" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px2dp_10"
                    android:text="@string/default_amount"
                    android:textColor="#2EA7E0"
                    android:textSize="@dimen/px2dp_56" />
            </LinearLayout>

            <TextView
                android:id="@+id/big_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ll_01"
                android:layout_below="@+id/ll_01"
                android:layout_marginLeft="@dimen/px2dp_140"
                android:text="@string/default_value"
                android:textColor="#2EA7E0"
                android:textSize="@dimen/px2dp_24" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px2dp_30"
            android:layout_marginRight="@dimen/px2dp_30"
            android:layout_marginTop="@dimen/px2dp_30"
            android:background="@drawable/card_item_blue_bg"
            android:orientation="vertical"
            android:paddingBottom="@dimen/px2dp_30"
            android:paddingLeft="@dimen/px2dp_48"
            android:paddingRight="@dimen/px2dp_63"
            android:paddingTop="@dimen/px2dp_30" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp_78" >

                <ImageView
                    android:id="@+id/org_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/org_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px2dp_16"
                    android:layout_toRightOf="@id/org_img"
                    android:text="@string/default_value"
                    android:textColor="#333333"
                    android:textSize="@dimen/px2sp_32" />

                <TextView
                    android:id="@+id/address_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/px2dp_16"
                    android:layout_toRightOf="@id/org_img"
                    android:text="@string/default_value"
                    android:textColor="#333333"
                    android:textSize="@dimen/px2sp_26" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp_44"
                android:layout_marginBottom="@dimen/px2dp_33"
                android:layout_marginTop="@dimen/px2dp_22"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="****"
                    android:textColor="#999999"
                    android:textSize="@dimen/px2sp_40" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="****"
                    android:textColor="#999999"
                    android:textSize="@dimen/px2sp_40" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="****"
                    android:textColor="#999999"
                    android:textSize="@dimen/px2sp_40" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/card_code_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value"
                    android:textColor="#333333"
                    android:textSize="@dimen/px2sp_40" />
            </LinearLayout>

            <TextView
                android:id="@+id/name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_value"
                android:textColor="#666666"
                android:textSize="@dimen/px2sp_26" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px2dp_30"
            android:layout_marginTop="@dimen/px2dp_63" >

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="需要用"
                android:textColor="#666666"
                android:textSize="@dimen/px2sp_26" />

            <TextView
                android:id="@+id/mobile_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/txt1"
                android:layout_toRightOf="@id/txt1"
                android:text="@string/default_value"
                android:textColor="#2ca9de"
                android:textSize="@dimen/px2sp_26" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/txt1"
                android:layout_toRightOf="@id/mobile_txt"
                android:text="接收验证码"
                android:textColor="#666666"
                android:textSize="@dimen/px2sp_26" />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/txt1"
                android:layout_marginBottom="@dimen/px2dp_18"
                android:layout_marginTop="@dimen/px2dp_20"
                android:background="#e9e9e9" />

            <TextView
                android:id="@+id/validate_txt1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px2dp_70"
                android:layout_below="@id/line1"
                android:layout_marginRight="@dimen/px2dp_16"
                android:gravity="center_vertical"
                android:text="手机验证码"
                android:textColor="#333333"
                android:textSize="@dimen/px2sp_32" />

            <EditText
                android:id="@+id/validate_code_txt"
                android:layout_width="@dimen/px2dp_200"
                android:layout_height="@dimen/px2dp_70"
                android:layout_below="@id/line1"
                android:layout_toRightOf="@id/validate_txt1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:textSize="@dimen/px2sp_28" />

            <TextView
                android:id="@+id/validate_code_btn"
                android:layout_width="@dimen/px2dp_222"
                android:layout_height="@dimen/px2dp_70"
                android:layout_alignParentRight="true"
                android:layout_below="@id/line1"
                android:layout_marginRight="@dimen/px2dp_30"
                android:background="@drawable/blue_round_bg"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="#ffffff"
                android:textSize="@dimen/px2sp_28" />

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/validate_txt1"
                android:layout_marginTop="@dimen/px2dp_18"
                android:background="#e9e9e9" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_90"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/px2dp_30"
        android:layout_marginLeft="@dimen/px2dp_30"
        android:layout_marginRight="@dimen/px2dp_30"
        android:background="@drawable/button_bg_blue"
        android:text="同意协议并投资"
        android:textColor="#ffffff"
        android:textSize="@dimen/px2dp_34" />

</RelativeLayout>