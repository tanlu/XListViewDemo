<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <include
        layout="@layout/top_title_layout" />

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp_205" >

                <com.miduo.financialmanageclient.widget.CircleImageView
                    android:id="@+id/head_circleimg"
                    android:layout_width="@dimen/px2dp_110"
                    android:layout_height="@dimen/px2dp_110"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px2dp_30"
                    android:layout_marginTop="@dimen/px2dp_46"
                    android:background="@drawable/ifa_defaulthead" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="@dimen/px2dp_1"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="@dimen/px2dp_20"
                    android:layout_marginLeft="@dimen/px2dp_36"
                    android:layout_marginTop="@dimen/px2dp_46"
                    android:layout_toRightOf="@+id/head_circleimg"
                    android:background="#E4E4E4" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/px2dp_72"
                    android:layout_marginTop="@dimen/px2dp_64"
                    android:layout_toRightOf="@+id/head_circleimg"
                    android:text="@string/default_value"
                    android:textColor="#333333"
                    android:textSize="@dimen/px2dp_32" />

                <TextView
                    android:layout_marginRight="@dimen/px2dp_30"
                    android:id="@+id/zhiye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/name"
                    android:layout_below="@+id/name"
                    android:layout_marginTop="@dimen/px2dp_16"
                    android:text="@string/default_value"
                    android:textColor="#333333"
                    android:textSize="@dimen/px2dp_30" />

                <TextView
                    android:id="@+id/dizhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/name"
                    android:layout_marginRight="@dimen/px2dp_30"
                    android:text="@string/default_value"
                    android:textColor="#999999"
                    android:textSize="@dimen/px2dp_30" />
            </RelativeLayout>

            <View
                android:id="@+id/v_02"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp_20"
                android:background="#F2F2F2" />

            <RelativeLayout
                android:id="@+id/rl_01"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp_106" >

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px2dp_30"
                    android:text="@string/default_value"
                    android:textColor="#333333"
                    android:textSize="@dimen/px2dp_32" />

                <ImageView
                    android:id="@+id/dadianhua"
                    android:layout_width="@dimen/px2dp_50"
                    android:layout_height="@dimen/px2dp_50"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/xiaoxi"
                    android:layout_marginRight="@dimen/px2dp_30"
                    android:src="@drawable/my_planner_tel" />

                <ImageView
                    android:id="@+id/xiaoxi"
                    android:layout_width="@dimen/px2dp_50"
                    android:layout_height="@dimen/px2dp_50"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/px2dp_62"
                    android:layout_toLeftOf="@+id/dadianhua"
                    android:src="@drawable/my_planner_msg" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp_1"
                android:background="#d4d4d4" />

            <RelativeLayout
                android:id="@+id/rl_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/px2dp_30" >

                <TextView
                    android:layout_marginLeft="@dimen/px2dp_30"
                    android:layout_marginRight="@dimen/px2dp_30"
                    android:id="@+id/jianjie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/px2dp_14"
                    android:text="@string/default_value"
                    android:textColor="#999999"
                    android:textSize="@dimen/px2dp_26" />
            </RelativeLayout>

            <View
                android:id="@+id/v_01"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp_20"
                android:background="#F2F2F2" />

            <LinearLayout
                android:id="@+id/xueli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/px2dp_30" >
            </LinearLayout>

            <View
                android:id="@+id/v_03"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp_1"
                android:background="#d4d4d4" />
            <!-- android:descendantFocusability="blocksDescendants"去掉list的点击事件 -->

            <com.miduo.financialmanageclient.widget.MyListView
                android:id="@+id/lv_jingli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px2dp_30"
                android:layout_marginRight="@dimen/px2dp_30"
                android:cacheColorHint="#00000000"
                android:listSelector="#00000000"
                android:divider="#00000000"
                android:dividerHeight="0dip" >
            </com.miduo.financialmanageclient.widget.MyListView>

            <RelativeLayout
                android:id="@+id/rl_03"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp_412"
                android:layout_marginLeft="@dimen/px2dp_30"
                android:layout_marginRight="@dimen/px2dp_30"
                android:layout_marginTop="@dimen/px2dp_30" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/page_num_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/px2dp_60"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/corner"
                    android:gravity="center"
                    android:text="@string/default_value"
                    android:width="@dimen/px2dp_60" 
                    android:textColor="#ffffff"
                    android:textSize="@dimen/px2sp_24"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px2dp_18" >

                <TextView
                    android:id="@+id/huanyiwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="@dimen/px2dp_30"
                    android:text="不满意，换一位"
                    android:textColor="#2EA7E0"
                    android:textSize="@dimen/px2dp_22" />
            </RelativeLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp_90"
                android:layout_marginBottom="@dimen/px2dp_30"
                android:layout_marginLeft="@dimen/px2dp_30"
                android:layout_marginRight="@dimen/px2dp_30"
                android:layout_marginTop="@dimen/px2sp_46"
                android:background="@drawable/button_bg_blue"
                android:text="推荐给朋友"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>