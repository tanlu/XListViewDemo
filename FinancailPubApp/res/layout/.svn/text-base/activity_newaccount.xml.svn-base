<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/top_title_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_124" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px2dp_30"
                android:layout_marginTop="@dimen/px2dp_35"
                android:background="#FFFFFF"
                android:text="请指定收款银行卡信息,根据有关部门要求同卡进出的规定,此卡需与您的支付卡信息一致."
                android:textColor="#999999"
                android:textSize="@dimen/px2dp_24" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_20"
            android:background="#EEEEEE"
             />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_157" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px2dp_30"
                android:layout_marginTop="@dimen/px2dp_30"
                android:text="请准确填写下列必要的信息"
                android:textColor="#2EA7E0"
                android:textSize="@dimen/px2dp_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px2dp_30"
                android:layout_marginTop="@dimen/px2dp_80" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收款人"
                    android:textColor="#333333"
                    android:textSize="@dimen/px2sp_30" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px2dp_24"
                    android:background="@null"
                    android:hint="请输入收款人姓名"
                    android:textColor="#999999"
                    android:textSize="@dimen/px2sp_26" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_2"
            android:layout_marginTop="@dimen/px2dp_1"
            android:background="#f2f2f2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_102" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px2dp_30" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证号"
                    android:textColor="#333333"
                    android:textSize="@dimen/px2sp_30" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px2dp_24"
                    android:background="@null"
                    android:hint="请输入与姓名对应的身份证号"
                    android:textColor="#999999"
                    android:textSize="@dimen/px2sp_26" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_2"
            android:layout_marginTop="@dimen/px2dp_1"
            android:background="#f2f2f2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_102" >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px2dp_30" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收款银行"
                    android:textColor="#333333"
                    android:textSize="@dimen/px2sp_30" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px2dp_24"
                    android:background="@null"
                    android:hint="请选择支付银行"
                    android:textColor="#999999"
                    android:textSize="@dimen/px2sp_26" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px2dp_77"
                android:src="@drawable/down_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_2"
            android:layout_marginTop="@dimen/px2dp_1"
            android:background="#f2f2f2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_102" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px2dp_30" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="银行卡号"
                    android:textColor="#333333"
                    android:textSize="@dimen/px2sp_30" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px2dp_24"
                    android:background="@null"
                    android:hint="请输入银行卡号码"
                    android:textColor="#999999"
                    android:textSize="@dimen/px2sp_26" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_2"
            android:layout_marginTop="@dimen/px2dp_1"
            android:background="#f2f2f2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_190" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px2dp_30"
                android:layout_marginTop="@dimen/px2dp_30"
                android:text="建议填写"
                android:textColor="#2EA7E0"
                android:textSize="@dimen/px2dp_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px2dp_30"
                android:layout_marginTop="@dimen/px2dp_92" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所在地"
                    android:textColor="#333333"
                    android:textSize="@dimen/px2sp_30" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px2dp_24"
                    android:background="@null"
                    android:hint="请输入开户支行所在的省市区"
                    android:textColor="#999999"
                    android:textSize="@dimen/px2sp_26" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_2"
            android:layout_marginTop="@dimen/px2dp_1"
            android:background="#f2f2f2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_102" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px2dp_30" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开户支行"
                    android:textColor="#333333"
                    android:textSize="@dimen/px2sp_30" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px2dp_24"
                    android:background="@null"
                    android:hint="请输入具体开户支行名称"
                    android:textColor="#999999"
                    android:textSize="@dimen/px2sp_26" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_2"
            android:layout_marginTop="@dimen/px2dp_1"
            android:background="#f2f2f2" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="@dimen/px2dp_660"
        android:layout_height="@dimen/px2dp_90"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/blue_round_bg"
        android:text="保存"
        android:textColor="#FFFFFF" />

</RelativeLayout>