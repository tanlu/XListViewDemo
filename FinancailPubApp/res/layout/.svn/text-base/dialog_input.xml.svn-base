<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_item_white_bg" >

    <View
        android:id="@+id/top_view"
        android:layout_width="@dimen/px2dp_20"
        android:layout_centerHorizontal="true"
        android:layout_height="@dimen/px2dp_30"
        android:background="#ffffff" />

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_view"
        android:gravity="center_horizontal"
        android:text="@string/default_value"
        android:textColor="#333333"
        android:textSize="@dimen/px2dp_30" />

    <TextView
        android:id="@+id/content_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_txt"
        android:layout_marginLeft="@dimen/px2dp_44"
        android:layout_marginRight="@dimen/px2dp_44"
        android:layout_marginTop="@dimen/px2dp_24"
        android:lineSpacingExtra="@dimen/px2dp_10"
        android:layout_marginBottom="@dimen/px2dp_20"
        android:text="@string/default_value"
        android:textColor="#333333"
        android:textSize="@dimen/px2dp_30" />
    
    <EditText
        android:id="@+id/ed_content"
        android:layout_width="match_parent"
        android:layout_below="@id/content_txt"
        android:layout_height="@dimen/px2dp_98"
        android:layout_marginLeft="@dimen/px2dp_44"
        android:layout_marginRight="@dimen/px2dp_44"
        android:gravity="center_vertical"
        android:background="@drawable/shape"
        android:hint="请输入登录密码"
        android:inputType="textPassword"
        android:singleLine="true" 
        android:selectAllOnFocus="true"
        android:maxLength="18"
        android:paddingLeft="@dimen/px2dp_10"
        android:textColor="#333333"
        android:textSize="@dimen/px2dp_30"
        android:layout_marginBottom="@dimen/px2dp_30"/>
    

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ed_content"
        android:background="#ebebeb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_90"
        android:layout_below="@id/line"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cancel_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/default_value"
            android:textColor="#2ea7e0"
            android:textSize="@dimen/px2sp_34" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#ebebeb" />

        <TextView
            android:id="@+id/confirm_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/default_value"
            android:textColor="#2ea7e0"
            android:textSize="@dimen/px2sp_34" />
    </LinearLayout>

</RelativeLayout>