<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:my="http://schemas.android.com/apk/res/com.miduo.financialmanageclient"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#f9f9f9">

    <TextView
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px2dp_100"
        android:text="@string/set_gest"
        android:textSize="@dimen/px2sp_34"
        android:textStyle="bold" />

    <com.miduo.financialmanageclient.widget.GesturesPasswordView
        android:id="@+id/small_gesture"
        android:layout_width="@dimen/px2dp_60"
        android:layout_height="@dimen/px2dp_60"
        android:layout_below="@id/top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px2dp_30" 
        android:layout_marginBottom="@dimen/px2dp_30"
        my:bigView="false"/>

    <TextView
        android:id="@+id/sjh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/small_gesture"
        android:layout_centerHorizontal="true"
        android:text="@string/draw_gest"
        android:textSize="@dimen/px2sp_30"
        android:textColor="#d6d6d6" />
    
    <TextView
        android:id="@+id/forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/px2dp_100"
        android:gravity="center_horizontal"
        android:text="@string/jump"
        android:textColor="#d3d3d3"
        android:textSize="@dimen/px2sp_30" />

    <com.miduo.financialmanageclient.widget.GesturesPasswordView
        android:id="@+id/large_gesture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sjh"
        android:layout_above="@+id/forget"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px2dp_48" 
        android:layout_marginLeft="@dimen/px2dp_70"
        android:layout_marginRight="@dimen/px2dp_70"
        my:bigView="true"/>

</RelativeLayout>