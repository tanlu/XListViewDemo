<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_top"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px2dp_816"
    android:background="@drawable/top_bg" >

    <RelativeLayout
        android:id="@+id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/big_wave" />

        <LinearLayout
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/px2dp_44"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/point_white" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px2dp_20"
                android:layout_marginRight="@dimen/px2dp_20"
                android:src="@drawable/point_blue" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/point_blue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/px2dp_294"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/pic2"
                android:drawablePadding="@dimen/px2dp_12"
                android:text="总收益  "
                android:textColor="#ffffff"
                android:textSize="@dimen/px2dp_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px2dp_12"
                android:text="￥"
                android:textColor="#ffffff"
                android:textSize="@dimen/px2dp_30" />

            <TextView
                android:id="@+id/sum_profit_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_amount"
                android:textColor="#FEFEFF"
                android:textSize="@dimen/px2dp_30" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/px2dp_572"
            android:layout_marginLeft="@dimen/px2dp_288"
            android:drawableLeft="@drawable/pic1"
            android:drawablePadding="@dimen/px2dp_10"
            android:text="@string/yestday"
            android:textColor="#ffffff"
            android:textSize="@dimen/px2dp_26" />

        <LinearLayout
            android:id="@+id/tv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/px2dp_406"
            android:orientation="horizontal" >

            <TextView                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px2dp_10"
                android:text="￥"
                android:id="@+id/unit_txt"
                android:textColor="#ffffff"
                android:textSize="@dimen/px2dp_40" />

            <TextView
                android:id="@+id/yesterday_profit_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_amount"
                android:textColor="#ffffff"
                android:textSize="@dimen/px2dp_110" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/not_login_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" >

        <LinearLayout
            android:id="@+id/point2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/px2dp_44"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/point_white" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px2dp_20"
                android:layout_marginRight="@dimen/px2dp_20"
                android:src="@drawable/point_blue" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/point_blue" />
        </LinearLayout>

        <ImageView
            android:id="@+id/waveView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/small_wave" />

        <ImageView
            android:id="@+id/people_head_img"
            android:layout_width="@dimen/px2dp_236"
            android:layout_height="@dimen/px2dp_236"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/px2dp_434"
            android:src="@drawable/people_head" />

        <TextView
            android:id="@+id/not_login_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/px2dp_320"
            android:text="登录以查看收益"
            android:textColor="#ffffff"
            android:textSize="@dimen/px2dp_36" />

        <TextView
            android:id="@+id/not_login_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/px2dp_166"
            android:background="@drawable/home_btn_bg"
            android:gravity="center"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="@dimen/px2dp_34" />
    </RelativeLayout>

</RelativeLayout>