<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff" >

    <View
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ececec" />

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_line"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/px2dp_26"
        android:paddingLeft="@dimen/px2dp_60"
        android:paddingRight="@dimen/px2dp_30"
        android:paddingTop="@dimen/px2dp_30" >

        <TextView
            android:id="@+id/product_name_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="@dimen/px2dp_30"
            android:singleLine="true"
            android:text="@string/default_value"
            android:textColor="#2ea7e0"
            android:textSize="@dimen/px2sp_26" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/px2dp_30" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ï¿¥"
                android:textColor="#2ea7e0"
                android:textSize="@dimen/px2sp_26" />

            <TextView
                android:id="@+id/single_amount_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_amount"
                android:textColor="#2ea7e0"
                android:textSize="@dimen/px2sp_26" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>