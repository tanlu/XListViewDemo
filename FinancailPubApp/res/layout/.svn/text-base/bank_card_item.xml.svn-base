<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/current_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_item_white_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/px2dp_30"
    android:paddingLeft="@dimen/px2dp_48"
    android:paddingRight="@dimen/px2dp_63"
    android:paddingTop="@dimen/px2dp_30" >

    <LinearLayout
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_78" >

            <ImageView
                android:id="@+id/org_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/org_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px2dp_16"
                android:layout_toRightOf="@id/org_img"
                android:text="@string/default_value"
                android:textColor="#333333"
                android:textSize="@dimen/px2sp_32" />

            <TextView
                android:id="@+id/address_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/px2dp_16"
                android:layout_toRightOf="@id/org_img"
                android:text="@string/default_value"
                android:textColor="#333333"
                android:textSize="@dimen/px2sp_26" />

            <ImageView
                android:id="@+id/open_img"
                android:layout_width="@dimen/px2dp_33"
                android:layout_height="@dimen/px2dp_33"
                android:contentDescription="@string/app_name"
                android:scaleType="center"
                android:src="@drawable/down_arrow"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp_44"
            android:layout_marginBottom="@dimen/px2dp_33"
            android:layout_marginTop="@dimen/px2dp_22"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="****"
                android:textColor="#999999"
                android:textSize="@dimen/px2sp_40" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="****"
                android:textColor="#999999"
                android:textSize="@dimen/px2sp_40" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="****"
                android:textColor="#999999"
                android:textSize="@dimen/px2sp_40" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/card_code_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_value"
                android:textColor="#333333"
                android:textSize="@dimen/px2sp_40" />
        </LinearLayout>

        <TextView
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_value"
            android:textColor="#666666"
            android:textSize="@dimen/px2sp_26" />

        <RelativeLayout
            android:id="@+id/person_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px2dp_33" >

            <TextView
                android:id="@+id/card_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证"
                android:textColor="#666666"
                android:textSize="@dimen/px2dp_26" />

            <TextView
                android:id="@+id/card_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/default_value"
                android:textColor="#666666"
                android:textSize="@dimen/px2dp_26" />

            <TextView
                android:id="@+id/bank_code_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_title_txt"
                android:layout_marginTop="@dimen/px2dp_30"
                android:text="银行卡号"
                android:textColor="#666666"
                android:textSize="@dimen/px2dp_26" />

            <TextView
                android:id="@+id/bank_code_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/card_txt"
                android:layout_marginTop="@dimen/px2dp_30"
                android:text="@string/default_value"
                android:textColor="#666666"
                android:textSize="@dimen/px2dp_26" />

            <TextView
                android:id="@+id/org_name_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bank_code_title_txt"
                android:layout_marginTop="@dimen/px2dp_30"
                android:text="收款银行"
                android:textColor="#666666"
                android:textSize="@dimen/px2dp_26" />

            <TextView
                android:id="@+id/person_org_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/bank_code_txt"
                android:layout_marginTop="@dimen/px2dp_30"
                android:text="@string/default_value"
                android:textColor="#666666"
                android:textSize="@dimen/px2dp_26" />

            <TextView
                android:id="@+id/address_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/org_name_title_txt"
                android:layout_marginTop="@dimen/px2dp_30"
                android:text="所在地"
                android:textColor="#666666"
                android:textSize="@dimen/px2dp_26" />

            <TextView
                android:id="@+id/person_address_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/person_org_name_txt"
                android:layout_marginTop="@dimen/px2dp_30"
                android:text="@string/default_value"
                android:textColor="#666666"
                android:textSize="@dimen/px2dp_26" />

            <TextView
                android:id="@+id/branch_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/address_title_txt"
                android:layout_marginTop="@dimen/px2dp_30"
                android:text="开户支行"
                android:textColor="#666666"
                android:textSize="@dimen/px2dp_26" />

            <TextView
                android:id="@+id/branch_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/person_address_txt"
                android:layout_marginTop="@dimen/px2dp_30"
                android:text="@string/default_value"
                android:textColor="#666666"
                android:textSize="@dimen/px2dp_26" />

            <LinearLayout
                android:id="@+id/amount_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/branch_title_txt"
                android:layout_marginTop="@dimen/px2dp_35"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单笔限额"
                    android:textColor="#2ea7e0"
                    android:textSize="@dimen/px2sp_26" />

                <TextView
                    android:id="@+id/single_limit_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value"
                    android:textColor="#2ea7e0"
                    android:textSize="@dimen/px2sp_26" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textColor="#2ea7e0"
                    android:textSize="@dimen/px2sp_26" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单日限额"
                    android:textColor="#2ea7e0"
                    android:textSize="@dimen/px2sp_26" />

                <TextView
                    android:id="@+id/one_day_limit_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value"
                    android:textColor="#2ea7e0"
                    android:textSize="@dimen/px2sp_26" />
            </LinearLayout>

            <TextView
                android:id="@+id/sel_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/amount_layout"
                android:layout_marginTop="@dimen/px2dp_36"
                android:background="@drawable/blue_round_bg"
                android:gravity="center"
                android:paddingBottom="@dimen/px2dp_26"
                android:paddingTop="@dimen/px2dp_26"
                android:text="选择此卡支付"
                android:textColor="#ffffff"
                android:textSize="@dimen/px2sp_34" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/limit_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px2dp_33"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px2dp_35"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单笔限额"
                    android:textColor="#666666"
                    android:textSize="@dimen/px2sp_26" />

                <TextView
                    android:id="@+id/single_limit_txt_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value"
                    android:textColor="#666666"
                    android:textSize="@dimen/px2sp_26" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textColor="#666666"
                    android:textSize="@dimen/px2sp_26" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单日限额"
                    android:textColor="#666666"
                    android:textSize="@dimen/px2sp_26" />

                <TextView
                    android:id="@+id/one_day_limit_txt_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value"
                    android:textColor="#666666"
                    android:textSize="@dimen/px2sp_26" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px2dp_10"
                android:text="本订单金额超限，无法使用此卡购买"
                android:textColor="#e43e40"
                android:textSize="@dimen/px2sp_26" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/add_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px2dp_44"
        android:layout_marginLeft="@dimen/px2dp_190"
        android:layout_marginTop="@dimen/px2dp_44"
        android:drawableLeft="@drawable/add"
        android:drawablePadding="@dimen/px2dp_12"
        android:text="使用其它银行卡"
        android:textColor="#999999"
        android:textSize="@dimen/px2sp_34" />

</LinearLayout>