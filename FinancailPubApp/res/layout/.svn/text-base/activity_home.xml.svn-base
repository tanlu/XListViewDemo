<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.miduo.financialmanageclient"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <FrameLayout
                android:id="@+id/tab_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:scaleType="fitXY"
                android:src="@drawable/rg_bg" />
        </RelativeLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:background="#ffffff">

            <com.miduo.financialmanageclient.widget.RadioItemView
                android:id="@+id/radio_button0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                custom:checked="true"
                custom:img_checked="@drawable/f_1_2"
                custom:img_unchecked="@drawable/f_1_1"
                custom:text_content="今日"
                custom:text_size="@dimen/px2sp_20"
                custom:textcolor_checked="#74bfe5"
                custom:textcolor_unchecked="#949494" />

            <com.miduo.financialmanageclient.widget.RadioItemView
                android:id="@+id/radio_button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                custom:checked="false"
                custom:img_checked="@drawable/f_2_2"
                custom:img_unchecked="@drawable/f_2_1"
                custom:text_content="产品"
                custom:text_size="@dimen/px2sp_20"
                custom:textcolor_checked="#74bfe5"
                custom:textcolor_unchecked="#949494" />

            <com.miduo.financialmanageclient.widget.RadioItemView
                android:id="@+id/radio_button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                custom:checked="false"
                custom:img_checked="@drawable/f_3_2"
                custom:img_unchecked="@drawable/f_3_1"
                custom:text_content="米仓"
                custom:text_size="@dimen/px2sp_20"
                custom:textcolor_checked="#74bfe5"
                custom:textcolor_unchecked="#949494" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>