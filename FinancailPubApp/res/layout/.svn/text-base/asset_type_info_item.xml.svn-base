<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_124"
        android:background="#ffffff"
        android:paddingLeft="@dimen/px2dp_30"
        android:paddingRight="@dimen/px2dp_30">

        <TextView
            android:id="@+id/type_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_value" 
            android:textColor="#666666"
            android:textSize="@dimen/px2sp_32"
            android:layout_marginTop="@dimen/px2dp_4"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/order_count_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px2dp_42"
            android:layout_toRightOf="@id/type_name_txt"
            android:text="@string/default_value" 
            android:textColor="#666666"
            android:textSize="@dimen/px2sp_32"
            android:layout_marginTop="@dimen/px2dp_4"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/order_count_unit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/order_count_txt"
            android:text="笔" 
            android:textColor="#666666"
            android:textSize="@dimen/px2sp_32"
            android:layout_marginTop="@dimen/px2dp_4"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/type_sum_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/default_amount"
            android:textColor="#666666"
            android:textSize="@dimen/px2sp_32" 
            android:layout_alignBottom="@id/order_count_unit_txt"/>

        <TextView
            android:id="@+id/type_sum_unit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/type_sum_txt"
            android:text="￥"
            android:textColor="#666666"
            android:textSize="@dimen/px2sp_32" 
            android:layout_marginTop="@dimen/px2dp_4"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</LinearLayout>