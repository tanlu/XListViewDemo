<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:my="http://schemas.android.com/apk/res/com.miduo.financialmanageclient"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/txttop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px2dp_100"
        android:text="@string/input_gest"
        android:textSize="@dimen/px2sp_34"/>

    <com.miduo.financialmanageclient.widget.GesturesPasswordView
        android:id="@+id/gesture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px2dp_70"
        android:layout_marginRight="@dimen/px2dp_70"
        android:layout_marginTop="@dimen/px2dp_100"
        android:layout_below="@id/txttop"
        my:bigView="true"/>

</RelativeLayout>