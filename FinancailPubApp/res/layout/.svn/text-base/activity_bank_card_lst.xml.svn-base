<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#f2f2f2">

    <include
        android:id="@+id/top_layout"
        layout="@layout/top_title_layout" />
    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:lineSpacingExtra="@dimen/px2dp_10"
        android:paddingBottom="@dimen/px2dp_30"
        android:paddingLeft="@dimen/px2dp_30"
        android:paddingRight="@dimen/px2dp_30"
        android:paddingTop="@dimen/px2dp_30"
        android:text="根据国家有关法律法规，此卡必须与您的支付卡及个人信息一致，否则可能导致资金无法到账。"
        android:textColor="#999999"
        android:textSize="@dimen/px2sp_24" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/px2dp_30"
        android:divider="@null"
        android:paddingBottom="@dimen/px2dp_20" >
    </ListView>

</LinearLayout>