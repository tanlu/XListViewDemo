<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <include
        android:id="@+id/top_layout"
        layout="@layout/top_title_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px2dp_30" >

        <LinearLayout
            android:id="@+id/type_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_marginTop="@dimen/px2dp_46">
            <TextView
            android:id="@+id/type_txt"
            android:layout_width="@dimen/px2dp_62"
            android:layout_height="@dimen/px2dp_32"            
            android:background="@drawable/blue_round_bg"
            android:gravity="center"
            android:text="推广"
            android:textColor="#ffffff"
            android:textSize="@dimen/px2sp_22" 
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px2dp_12"
            android:singleLine="true"
            android:text="@string/default_value"
            android:textColor="#333333"
            android:textSize="@dimen/px2dp_32" 
            android:layout_gravity="center_vertical"/>
        </LinearLayout>        

        <TextView
            android:id="@+id/shijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px2dp_74"
            android:layout_below="@id/type_layout"
            android:layout_marginTop="@dimen/px2dp_18"
            android:text="@string/default_value"
            android:textColor="#999999"
            android:textSize="@dimen/px2dp_26" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/px2dp_30"
        android:layout_marginTop="@dimen/px2dp_42"
        android:background="#ececec" />

    <TextView
        android:id="@+id/content_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px2dp_30"
        android:lineSpacingExtra="@dimen/px2dp_24"
        android:text="@string/default_value"
        android:textColor="#999999"
        android:textSize="@dimen/px2sp_32" />

</LinearLayout>