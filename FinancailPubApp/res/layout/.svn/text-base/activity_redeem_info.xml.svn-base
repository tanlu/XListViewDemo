<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <include
        android:id="@+id/top_layout"
        layout="@layout/top_title_layout" />

    <TextView
        android:id="@+id/product_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_layout"
        android:layout_marginLeft="@dimen/px2dp_30"
        android:layout_marginRight="@dimen/px2dp_30"
        android:layout_marginTop="@dimen/px2dp_42"
        android:text="@string/default_value"
        android:textColor="#333333"
        android:textSize="@dimen/px2sp_36" />

    <LinearLayout
        android:id="@+id/amount_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name_txt"
        android:layout_marginBottom="@dimen/px2dp_16"
        android:layout_marginLeft="@dimen/px2dp_30"
        android:layout_marginTop="@dimen/px2dp_46"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/amount_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px2dp_16"
            android:text="赎回金额"
            android:textColor="#333333"
            android:textSize="@dimen/px2sp_32" />

        <TextView
            android:id="@+id/number_amount_txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="#2eabe1"
            android:textSize="@dimen/px2sp_32" />

        <TextView
            android:id="@+id/number_amount_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_amount"
            android:textColor="#2eabe1"
            android:textSize="@dimen/px2sp_54" />
        <TextView
            android:id="@+id/number_amount_unit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="份"
            android:textColor="#2eabe1"
            android:textSize="@dimen/px2sp_54" />
    </LinearLayout>

    <TextView
        android:id="@+id/china_amount_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/amount_layout"
        android:layout_marginLeft="@dimen/px2dp_178"
        android:text="@string/default_value"
        android:textColor="#2eabe1"
        android:textSize="@dimen/px2sp_28" />

    <LinearLayout
        android:id="@+id/card_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/china_amount_txt"
        android:layout_marginLeft="@dimen/px2dp_30"
        android:layout_marginTop="@dimen/px2dp_54"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/info_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赎回金额将会在--个工作日内汇入您原订单的支付银行卡"
            android:textColor="#999999"
            android:textSize="@dimen/px2sp_20" />

        <LinearLayout
            android:id="@+id/card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px2dp_30"
            android:layout_marginTop="@dimen/px2dp_15"
            android:background="@drawable/card_item_blue_bg"
            android:orientation="vertical"
            android:paddingBottom="@dimen/px2dp_30"
            android:paddingLeft="@dimen/px2dp_48"
            android:paddingRight="@dimen/px2dp_63"
            android:paddingTop="@dimen/px2dp_30" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp_78" >


                <ImageView
                android:id="@+id/org_img"
                android:layout_width="@dimen/px2dp_60"
                android:layout_height="@dimen/px2dp_60"
                android:layout_alignParentBottom="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/grey_point"
                android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/org_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px2dp_16"
                    android:layout_toRightOf="@id/org_img"
                    android:text="@string/default_value"
                    android:textColor="#333333"
                    android:textSize="@dimen/px2sp_32" />

                <TextView
                    android:id="@+id/address_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/px2dp_16"
                    android:layout_toRightOf="@id/org_img"
                    android:text="@string/default_value"
                    android:textColor="#333333"
                    android:textSize="@dimen/px2sp_26" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp_44"
                android:layout_marginBottom="@dimen/px2dp_33"
                android:layout_marginTop="@dimen/px2dp_22"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="****"
                    android:textColor="#999999"
                    android:textSize="@dimen/px2sp_40" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="****"
                    android:textColor="#999999"
                    android:textSize="@dimen/px2sp_40" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="****"
                    android:textColor="#999999"
                    android:textSize="@dimen/px2sp_40" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/card_code_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value"
                    android:textColor="#333333"
                    android:textSize="@dimen/px2sp_40" />
            </LinearLayout>

            <TextView
                android:id="@+id/name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_value"
                android:textColor="#666666"
                android:textSize="@dimen/px2sp_26" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px2dp_63" >

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="需要用"
                android:textColor="#666666"
                android:textSize="@dimen/px2sp_26" />

            <TextView
                android:id="@+id/mobile_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/txt1"
                android:layout_toRightOf="@id/txt1"
                android:text="@string/default_value"
                android:textColor="#2ca9de"
                android:textSize="@dimen/px2sp_26" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/txt1"
                android:layout_toRightOf="@id/mobile_txt"
                android:text="接收验证码"
                android:textColor="#666666"
                android:textSize="@dimen/px2sp_26" />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/txt1"
                android:layout_marginBottom="@dimen/px2dp_18"
                android:layout_marginTop="@dimen/px2dp_20"
                android:background="#e9e9e9" />

            <TextView
                android:id="@+id/validate_txt1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px2dp_70"
                android:layout_below="@id/line1"
                android:layout_marginRight="@dimen/px2dp_16"
                android:gravity="center_vertical"
                android:text="手机验证码"
                android:textColor="#333333"
                android:textSize="@dimen/px2sp_32" />

            <EditText
                android:id="@+id/validate_code_txt"
                android:layout_width="@dimen/px2dp_200"
                android:layout_height="@dimen/px2dp_70"
                android:layout_below="@id/line1"
                android:layout_toRightOf="@id/validate_txt1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:textSize="@dimen/px2sp_28" />

            <TextView
                android:id="@+id/validate_code_btn"
                android:layout_width="@dimen/px2dp_222"
                android:layout_height="@dimen/px2dp_70"
                android:layout_alignParentRight="true"
                android:layout_below="@id/line1"
                android:layout_marginRight="@dimen/px2dp_30"
                android:background="@drawable/bg_blue_right_angle"
                android:gravity="center"
                android:text="@string/gainValidate"
                android:textColor="#ffffff"
                android:textSize="@dimen/px2sp_28" />

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/validate_txt1"
                android:layout_marginTop="@dimen/px2dp_18"
                android:background="#e9e9e9" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/btn_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/px2dp_40"
        android:layout_marginLeft="@dimen/px2dp_30"
        android:layout_marginRight="@dimen/px2dp_30"
        android:background="@drawable/blue_round_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/px2dp_26"
        android:paddingTop="@dimen/px2dp_26"
        android:text="确定赎回"
        android:textColor="#ffffff"
        android:textSize="@dimen/px2sp_34" />

    <TextView
        android:id="@+id/agree_info_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_txt"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/px2dp_28"
        android:layout_marginRight="@dimen/px2dp_22"
        android:padding="@dimen/px2dp_10"
        android:text="协议"
        android:textColor="#2da8df"
        android:textSize="@dimen/px2sp_26" 
        android:visibility="gone"/>


</RelativeLayout>