<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <include layout="@layout/top_title_layout" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px2dp_124"
        android:src="@drawable/error" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px2dp_42"
        android:gravity="center_horizontal"
        android:text="您的订单支付失败！"
        android:textSize="@dimen/px2sp_48" />

    <TextView
        android:layout_marginTop="@dimen/px2dp_40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px2dp_112"
        android:lineSpacingExtra="@dimen/px2dp_24"
        android:text="@string/failurecause"
        android:textColor="#666666"
        android:textSize="@dimen/px2sp_24" />
    <View 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/tv_repay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_90"
        android:layout_marginLeft="@dimen/px2dp_30"
        android:layout_marginRight="@dimen/px2dp_30"
        android:background="@drawable/button_bg_blue"
        android:gravity="center"
        android:text="重新支付"
        android:textColor="#ffffff"
        android:textSize="@dimen/px2sp_34" />

    <TextView
        android:id="@+id/tv_callmiduo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_90"
        android:layout_marginLeft="@dimen/px2dp_30"
        android:layout_marginRight="@dimen/px2dp_30"
        android:layout_marginTop="@dimen/px2dp_30"
        android:background="@drawable/button_bg_blue_line"
        android:gravity="center"
        android:text="咨询米多客服"
        android:textColor="#2da8df"
        android:textSize="@dimen/px2sp_34" />

    <TextView
        android:id="@+id/tv_callbank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_90"
        android:layout_marginBottom="@dimen/px2dp_30"
        android:layout_marginLeft="@dimen/px2dp_30"
        android:layout_marginRight="@dimen/px2dp_30"
        android:layout_marginTop="@dimen/px2dp_30"
        android:background="@drawable/button_bg_blue_line"
        android:gravity="center"
        android:text="咨询银行客服"
        android:textColor="#2da8df"
        android:textSize="@dimen/px2sp_34" />

</LinearLayout>