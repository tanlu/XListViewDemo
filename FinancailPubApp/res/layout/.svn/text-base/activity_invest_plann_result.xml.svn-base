<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customer="http://schemas.android.com/apk/res/com.miduo.financialmanageclient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <include
        android:id="@+id/top_layout"
        layout="@layout/top_title_layout" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px2dp_60"
        android:gravity="center_horizontal"
        android:text="基于您的回答为您提供多元化的资产配置"
        android:textColor="#666666"
        android:textSize="@dimen/px2sp_32" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_1"
        android:layout_marginLeft="@dimen/px2dp_74"
        android:layout_marginRight="@dimen/px2dp_74"
        android:layout_marginTop="@dimen/px2dp_18"
        android:background="#ececec" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px2dp_54"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="您的风险厌恶系数"
            android:textColor="#333333"
            android:textSize="@dimen/px2sp_32" />

        <ImageView
            android:id="@+id/iv_less1"
            android:layout_width="@dimen/px2dp_64"
            android:layout_height="@dimen/px2dp_64"
            android:layout_marginLeft="@dimen/px2dp_20"
            android:src="@drawable/less1" />

        <TextView
            android:id="@+id/tv_data"
            android:layout_width="@dimen/px2dp_124"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px2dp_20"
            android:background="@drawable/frame_bg_gray"
            android:gravity="center"
            android:text="0.5"
            android:textColor="#2ca9de"
            android:textSize="@dimen/px2sp_32" />

        <ImageView
            android:id="@+id/iv_add1"
            android:layout_width="@dimen/px2dp_64"
            android:layout_height="@dimen/px2dp_64"
            android:layout_marginLeft="@dimen/px2dp_20"
            android:src="@drawable/add1" />
    </LinearLayout>

    <com.miduo.financialmanageclient.widget.InvestmentBarPic
        android:id="@+id/investmentBarPic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_434"
        android:layout_marginTop="@dimen/px2dp_118"
        android:background="@drawable/testresult" 
        customer:leftPadding="@dimen/px2dp_80"
        customer:perBarPadding="@dimen/px2dp_54"
        
        >
    </com.miduo.financialmanageclient.widget.InvestmentBarPic>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_1"
        android:background="#0d9fd2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px2dp_52"
        android:layout_marginRight="@dimen/px2dp_52"
        android:layout_marginTop="@dimen/px2dp_14"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_text1"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="高流动性"
            android:textColor="#333333"
            android:textSize="@dimen/px2sp_24" />

        <TextView
            android:id="@+id/tv_text2"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="固定收益"
            android:textColor="#333333"
            android:textSize="@dimen/px2sp_24" />

        <TextView
            android:id="@+id/tv_text3"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="浮动收益"
            android:textColor="#333333"
            android:textSize="@dimen/px2sp_24" />

        <TextView
            android:id="@+id/tv_text4"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="另类投资"
            android:textColor="#333333"
            android:textSize="@dimen/px2sp_24" />
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_80"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/px2dp_30"
        android:layout_marginRight="@dimen/px2dp_30"
        android:layout_marginBottom="@dimen/px2dp_80"
        >
        <TextView 
            android:id="@+id/tv_retry"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="重新测试"
            android:textColor="#ffffff"
            android:textSize="@dimen/px2sp_30"
            android:background="@drawable/button_bg_blue"
            />
        <View 
            android:layout_width="@dimen/px2dp_20"
            android:layout_height="match_parent"
            />
        <TextView 
            android:id="@+id/tv_check"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="查看现有资产"
            android:textColor="#ffffff"
            android:textSize="@dimen/px2sp_30"
            android:background="@drawable/button_bg_blue"
            />
    </LinearLayout>

</LinearLayout>