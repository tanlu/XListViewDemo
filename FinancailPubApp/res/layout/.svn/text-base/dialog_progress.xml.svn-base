<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/opation_bg1"
    android:orientation="vertical"
    android:paddingTop="@dimen/px2dp_78" >
    
    <TextView
        android:id="@+id/title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/default_value"
        android:textColor="#333333"
        android:textSize="@dimen/px2sp_36" 
        android:layout_marginLeft="@dimen/px2dp_78"
        android:layout_marginRight="@dimen/px2dp_78"/>

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/px2dp_27"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="@dimen/px2dp_78"
        android:layout_marginRight="@dimen/px2dp_78"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp_70"
        android:layout_marginTop="@dimen/px2dp_64">

        <TextView
            android:id="@+id/submit_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2061a1"
            android:gravity="center"
            android:text="@string/default_value"
            android:textColor="#ffffff"
            android:textSize="@dimen/px2sp_30" />
    </RelativeLayout>

</LinearLayout>