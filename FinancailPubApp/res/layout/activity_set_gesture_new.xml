<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.miduo.financialmanageclient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg" >

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px2dp_86" >

        <View
            android:id="@+id/white_view"
            android:layout_width="@dimen/px2dp_155"
            android:layout_height="@dimen/px2dp_155"
            android:background="@drawable/white_ring" />

        <com.miduo.financialmanageclient.widget.CircleImageView
            android:id="@+id/head_circleimg"
            android:layout_width="@dimen/px2dp_134"
            android:layout_height="@dimen/px2dp_134"
            android:layout_centerInParent="true"
            android:src="@drawable/header_gesture"
            custom:border_color="#dedede"
            custom:border_width="0dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tel_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px2dp_40"
        android:textColor="#ffffff"
        android:textSize="@dimen/px2sp_30" />
    <TextView
        android:id="@+id/info_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tel_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px2dp_20"
        android:text="@string/gesture_str1"
        android:textColor="#ffffff"
        android:textSize="@dimen/px2sp_30" />

    <com.miduo.financialmanageclient.widget.GesturesPasswordViewNew
        android:id="@+id/large_gesture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_txt"
        android:layout_marginLeft="@dimen/px2dp_72"
        android:layout_marginRight="@dimen/px2dp_72"
        android:layout_marginTop="@dimen/px2dp_90" />

    <TextView
        android:id="@+id/repeate_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/large_gesture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px2dp_50"
        android:text="重新绘制"
        android:textColor="#ffffff"
        android:textSize="@dimen/px2sp_30"
        android:visibility="gone" />

</RelativeLayout>