/* Reset system css */

blockquote,html,body,dd,dir,dl,fieldset,form,h1,h2,h3,h4,h5,h6,hr,input,menu,ol,p,pre,ul,xmp {margin:0;padding:0;}
button,caption,dir,fieldset,input,legend,menu,ol,td,textarea,th,ul {padding:0}
html{text-size-adjust:none}ul,ol,menu{list-style:none}img{border:none}blockquote,q{quotes:none}blockquote:before,blockquote:after,q:before,q:after{content:'';content:none}a{margin:0;padding:0;border:0;vertical-align:baseline;}ins{background-color:#ff9;color:#000;text-decoration:none}mark{background-color:#ff9;color:#000;font-style:italic;font-weight:700}del{text-decoration:line-through}sup,sub{line-height:0}abbr[title],dfn[title]{border-bottom:1px dotted #000;cursor:help}table{border-collapse:collapse;border-spacing:0}hr{display:block;height:1px;border:0;border-top:1px solid #ccc;margin:1em 0;padding:0}
input,select,label,button{vertical-align:middle;border:none;background:none;font-size:12px;}
address,caption,cite,code,dfn,em,i,th,var{font-style:normal; font-weight:normal;}

/* Reset end */

/* All Css */

html {color: #333; font-size: 12px;font-family:'Microsoft Yahei';}
body {font-size: 12px;} 
h1,h2,h3,h4,h5,h6{font-weight:normal;font-family:'Microsoft Yahei';}
h1{font-size: 24px;}h2{font-size: 22px;}h3{font-size: 20px;}h4{font-size: 18px;}h5{font-size: 16px;}h6{font-size: 14px;}
a:link,a:visited {text-decoration:none; cursor:pointer; outline:none; blr:expression(this.onFocus=this.blur());color:#333;}
a:hover,a:active {text-decoration: underline;-webkit-transition:color .15s linear , background-color .3s linear;-moz-transition:color .15s linear , background-color .3s linear;-o-transition:color .15s linear , background-color .3s linear;-ms-transition:color .15s linear , background-color .3s linear;transition:color .15s linear , background-color .3s linear; cursor:pointer;}
.clear {height:0; width:100%; line-height:0; overflow:hidden; clear:both; zoom:1; font-size:0px;}.clear8 {height:8px; overflow:hidden; clear:both; zoom:1;}
.fl{ float:left;}
.fr{float:right;}
input:focus
{
	outline:none
}
/*提示框样式*/
.tip{
    border-radius: 5px;
    padding: 3px 5px;
    background-color: #000000;
    color: #ffffff;
    font-family: "微软雅黑";
    font-size: 1.3em;
    position: fixed;
    bottom: 13%;
    display: none;
}
.footer{ margin-top:40px; padding-top:10px; height:80px; font-size:20px; line-height:36px; background:#e8e8e8; text-align:center; color:#999;}
.footer a{ color:#999;}

@media screen and (max-width: 640px) {

.footer{ margin-top:26px; padding-top:7px; height:56px; font-size:14px; line-height:24px;}

}

@media screen and (max-width: 400px) {

.footer{ margin-top:20px; padding-top:4px; height:52px; font-size:12px; line-height:22px;}

}